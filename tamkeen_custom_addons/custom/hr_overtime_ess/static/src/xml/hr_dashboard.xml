<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="hr_dashboard.dashboard">
        <t t-jquery='.main-dashboard' t-operation='append'>
            <!-- Overtime -->
            <t t-if="widget.employee_data.is_otrta">
                <div class="col-md-3">
                    <div class="dash-box dash-box-color-1">
                        <div class="dash-box-icon">
                            <i class="fa fa-clock-o"/>
                        </div>
                        <div class="dash-box-body">
                            <span class="dash-box-count">
                                Overtime
                            </span>
                            <div class="dash-btn">
                                <t t-if="widget.employee_data.is_otrta">
                                    <button
                                            class="btn btn-info btn-xs overtime_pre_requests_to_approve">
                                        Pre Requests to Approve
                                    </button>
                                    <span class="btn btn-info btn-xs-num overtime_pre_requests_to_approve">
                                        <t t-esc="widget.employee_data.overtime_pre_requests_to_approve"/>
                                    </span>
                                    <button
                                            class="btn btn-info btn-xs overtime_claims_to_approve">
                                        Claims Requests to Approve
                                    </button>
                                    <span class="btn btn-info btn-xs-num overtime_claims_to_approve">
                                        <t t-esc="widget.employee_data.overtime_claims_to_approve"/>
                                    </span>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </t>
</templates>