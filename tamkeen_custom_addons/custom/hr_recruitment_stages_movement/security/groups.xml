        <!-- Group Rule -->

        <record model="ir.rule" id="dep_manager_rec_rule">
            <field name="name">See own department</field>
            <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
            <field name="groups" eval="[(4,ref('group_dep_manager'))]"/>
            <field name="domain_force">['|', ('department_id.id','child_of', [user.employee_ids[0].department_id.id]),('department_id.id','=', user.employee_ids[0].department_id.id)]
            </field>
            <field name="global" eval="False"/>
        </record>

        <record model="ir.rule" id="rule_unit_head">
            <field name="name">Unit Head Rule</field>
            <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
            <field name="groups" eval="[(4,ref('group_unit_head'))]"/>
            <field name="domain_force">[('state', '=', 'unit_head')]
            </field>
            <field name="global" eval="False"/>
        </record>

        <record model="ir.rule" id="without_dep_manager_rec_rule">
            <field name="name">See all department</field>
            <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
            <field name="groups" eval="[(4,ref('group_ceo_manager')),(4,ref('hr_recruitment.group_hr_recruitment_user')),(4,ref('group_hr_manager_rec'))]"/>
            <field name="domain_force">[(1, '=', 1)]
            </field>
            <field name="global" eval="False"/>
        </record>

        <record model="ir.rule" id="rec_rule_see_all_attachments">
            <field name="name">Recruitment See All Attachments</field>
            <field name="model_id" ref="base.model_ir_attachment"/>
            <field name="groups" eval="[(4,ref('hr_recruitment.group_hr_recruitment_user')),
            (4,ref('group_hr_manager_rec')),(4,ref('group_dep_manager')),
            (4,ref('group_ceo_manager')),(4,ref('group_compensation')),
            (4,ref('group_unit_head')),
            (4, ref('hr_admin.group_hr_admin'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="global" eval="False"/>
        </record>

