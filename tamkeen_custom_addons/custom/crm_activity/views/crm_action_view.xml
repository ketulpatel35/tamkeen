<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_action_form" model="ir.ui.view">
            <field name="name">crm.action.form</field>
            <field name="model">crm.action</field>
            <field name="arch" type="xml">
                <form string="Actions">
                    <header>
                        <button string="Confirm" name="button_confirm" type="object" states="todo" class="oe_highlight"/>
                        <button string="Set To Todo" name="button_set_to_todo" type="object" states="done"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="ref" class="oe_edit_only" string="Reference"/>
                            <h1><field name="ref" attrs="{'readonly':True}" /></h1>
                        </div>
                        <group>
                            <group>
                                <field name="reference_id" attrs="{'required':[('reference_id', '=', False)], 'readonly':[('state', '!=', 'todo')]}" />
                                <field name="partner_id" />
                                <field name="date" attrs="{'readonly':[('state', '!=', 'todo')]}" />
                            </group>
                            <group>
                                <field name="user_id" attrs="{'readonly':[('state', '!=', 'todo')]}" />
                                <field name="action_type"  domain="[('active', '=', True)]" attrs="{'readonly':[('state', '!=', 'todo')]}" widget="selection" />
                                <field name="details" attrs="{'readonly':[('state', '!=', 'todo')]}" width="200"  />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_action_tree" model="ir.ui.view">
            <field name="name">crm.action.tree</field>
            <field name="model">crm.action</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ref"/>
                    <field name="reference_id" attrs="{'required':[('reference_id', '=', False)]}" />
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="user_id"/>
                    <field name="action_type" domain="[('active', '=', True)]"/>
                    <field name="details"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_crm_action_filter" model="ir.ui.view">
            <field name="name">CRM - Actions</field>
            <field name="model">crm.action</field>
            <field name="arch" type="xml">
                <search string="Search Actions">
                    <field name="ref"/>
                    <field name="reference_id"/>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="user_id"/>
                    <separator/>
                    <filter string="Todo" name="todo_only"
                            domain="[('state', '=', 'todo')]"/>
                    <filter string="Done" name="done_only"
                            domain="[('state', '=', 'done')]"/>
                    <separator/>
                    <filter string="My Actions" name="user_me"
                            domain="[('user_id', '=', uid)]"
                            help="Actions done by me"/>
                </search>
            </field>
        </record>

        
    </data>
</odoo>
