<odoo>
    <data>
        
        <record id="crm_activity_view_form" model="ir.ui.view">
            <field name="name">crm.activity.form</field>
            <field name="model">crm.activity</field>
            <field name="inherit_id" ref="crm.crm_activity_view_form" />
            <field name="arch" type="xml">
                <field name="team_id" position="before">
                    <field name="ref" attrs="{'required':True}" />
                </field>
            </field>
        </record>

        <record id="crm_activity_view_tree" model="ir.ui.view">
            <field name="name">crm.activity.tree</field>
            <field name="model">crm.activity</field>
            <field name="inherit_id" ref="crm.crm_activity_view_tree" />
            <field name="arch" type="xml">
                <field name="sequence" position="before">
                    <field name="ref" />
                </field>
            </field>
        </record>
    
    </data>
</odoo>
