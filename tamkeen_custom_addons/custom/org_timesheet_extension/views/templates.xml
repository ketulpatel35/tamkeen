        <!-- timesheet request send for Manager Approval -->
        <record id="timesheet_request_send_manager" model="mail.template">
            <field name="name">Employee Timesheet Manager Approval</field>
            <field name="model_id"
                   ref="org_timesheet_extension.model_hr_timesheet_sheet_sheet" />
            <field name="email_from">${user.email | safe}</field>
            <field name="email_to">${object.employee_id.timesheet_manager_id.work_email | safe}</field>
            <field name="email_cc"></field>
            <field name="subject">Timesheet Request To Be Approved</field>
            <field name="body_html"><![CDATA[
<p>
Dear ${(object.employee_id.timesheet_manager_id.user_id.name or '')|safe},
<br/>
<br/>
<p style="padding-left: 4em;">
Kindly, Approve the pending Timesheet request.
<br/>
    <br/>
<b>Employee Name: </b>${object.employee_id.name}
<br/>
</p>
<br/>
<br/>
% if ctx["display_link"]:
   To proceed, Kindly <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
% endif
<br/>
<p> Kind Regards </p>
<br/>
<p style="font-size:13px; color:blue; border: 1px solid red; width:350px;"> Auto generated message through the ERP System. </p>
			   ]]>
            </field>
        </record>

