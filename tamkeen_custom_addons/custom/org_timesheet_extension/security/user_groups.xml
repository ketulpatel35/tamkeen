<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">
        <record model="ir.module.category" id="loan_management">
            <field name="name">Loan Management</field>
            <field name="sequence">18</field>
        </record>
         <record id="group_loan_normal_user" model="res.groups">
            <field name="name">Normal User</field>
            <field name="category_id" ref="loan_management"/>
        </record>
        <record id="group_loan_view_all_loan" model="res.groups">
            <field name="name">View All Loan Requests</field>
            <field name="category_id" ref="loan_management"/>
        </record>
        <record id="group_loan_manager_approval" model="res.groups">
            <field name="name">Manager Approval</field>
            <field name="implied_ids" eval="[(4, ref('group_loan_normal_user'))]"/>
            <field name="category_id" ref="loan_management"/>
        </record>
        <record id="group_loan_vp_approval" model="res.groups">
            <field name="name">VP Approval</field>
            <field name="implied_ids" eval="[(4, ref('group_loan_normal_user'))]"/>
            <field name="category_id" ref="loan_management"/>
        </record>
        <record id="group_loan_ceo_approval" model="res.groups">
            <field name="name">CEO Approval</field>
            <field name="implied_ids" eval="[(4, ref('group_loan_normal_user'))]"/>
            <field name="category_id" ref="loan_management"/>
        </record>
        <record id="group_loan_hr_approval" model="res.groups">
            <field name="name">HR Approval</field>
            <field name="category_id" ref="loan_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_loan_normal_user'))]"/>
        </record>
        <record id="group_loan_budget_approval" model="res.groups">
            <field name="name">Budget Approval</field>
            <field name="category_id" ref="loan_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_loan_normal_user'))]"/>
        </record>
        <!-- Finance Process -->
        <record id="group_loan_finance_approval" model="res.groups">
            <field name="name">Finance Processing/Approval</field>
            <field name="category_id" ref="loan_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_loan_normal_user'))]"/>
        </record>
        <record id="group_loan_payroll_processing" model="res.groups">
            <field name="name">Payroll Processing</field>
            <field name="category_id" ref="loan_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_loan_normal_user'))]"/>
        </record>
        <record id="group_loan_self_approval_srvs" model="res.groups">
            <field name="name">Can Approve/Refuse His/Her Loan Requests</field>
            <field name="implied_ids" eval="[(4, ref('group_loan_manager_approval'))]"/>
            <field name="category_id" ref="loan_management"/>
        </record>
         <record id="group_loan_on_behalf_approval_srvs" model="res.groups">
            <field name="name">Can Request on Behalf of Others</field>
            <field name="implied_ids" eval="[(4, ref('group_loan_normal_user'))]"/>
            <field name="category_id" ref="loan_management"/>
        </record>
         <record id="group_loan_cancel" model="res.groups">
            <field name="name">Cancel Loan Requests</field>
            <field name="implied_ids" eval="[(4, ref('group_loan_normal_user'))]"/>
            <field name="category_id" ref="loan_management"/>
        </record>
        <record id="group_loan_reject" model="res.groups">
            <field name="name">Reject Loan Requests</field>
            <field name="implied_ids" eval="[(4, ref('group_loan_normal_user'))]"/>
            <field name="category_id" ref="loan_management"/>
        </record>
        <record id="group_loan_locked_unlocked" model="res.groups">
            <field name="name">Lock/Unlock Loan Requests</field>
            <field name="category_id" ref="loan_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_loan_normal_user'))]"/>
        </record>
        <record id="group_loan_request_reschedule" model="res.groups">
            <field name="name">Reschedule Loan Requests</field>
            <field name="category_id" ref="loan_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_loan_normal_user'))]"/>
        </record>
        <record id="group_loan_config" model="res.groups">
            <field name="name">Loan Configuration</field>
            <field name="category_id" ref="loan_management"/>
            <field name="implied_ids" eval="[(4, ref('group_loan_normal_user'))]"/>
        </record>
         <record id="group_loan_xls_report" model="res.groups">
            <field name="name">Loan Report</field>
            <field name="category_id" ref="loan_management"/>
        </record>

    </data>
</odoo>