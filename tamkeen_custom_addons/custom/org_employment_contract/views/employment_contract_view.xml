<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Employment Contract Tree View-->
    <record id="employment_contract_tree_view" model="ir.ui.view">
        <field name="name">employment.contract.tree.view</field>
        <field name="model">employment.contract</field>
        <field name="arch" type="xml">
            <tree string="Employment Contract">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="employee_company_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
            </tree>
        </field>
    </record>

    <!-- Employment Contract Form View-->
    <record id="employment_contract_form_view" model="ir.ui.view">
        <field name="name">employment.contract.form.view</field>
        <field name="model">employment.contract</field>
        <field name="arch" type="xml">
            <form string="Employment Contract">
                <sheet string="Employment Contract">
                    <group colspan="4" col="4">
                        <field name="name"/>
                        <field name="employee_id" options="{'no_open': True,'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                        <field name="employee_company_id" readonly="1" />
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Employment Contract Search-->
    <record id="employment_contract_search_view" model="ir.ui.view">
        <field name="name">employment.contract.search.view</field>
        <field name="model">employment.contract</field>
        <field name="arch" type="xml">
            <search string="Employment Contract">
                <field name="name" string="Reference"/>
                <field name="employee_id"/>
                <field name="employee_company_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
            </search>
        </field>
    </record>

    <!-- Employment Contract Action -->
    <record id="employment_contract_action"
            model="ir.actions.act_window">
        <field name="name">Employment Contract</field>
        <field name="res_model">employment.contract</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>