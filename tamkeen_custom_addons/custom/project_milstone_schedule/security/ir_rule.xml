<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="project_milestone_rule_for_assign_project" model="ir.rule">
            <field name="name">View Assign Project Milestone</field>
            <field name="model_id" ref="model_project_milestones_schedule"/>
            <field name="domain_force">['|', '|', '|', '|',
                ('project_id.user_id','=',user.id),
                ('project_id.secondary_pm_id','=',user.id),
                ('project_id.project_sponsor_id','=',user.id),
                ('project_id.control_project_manager_id','=',user.id),
                ('project_id.account_manager_id','=',user.id)]
            </field>
            <field name="groups"
                   eval="[(4,ref('project_management.group_view_assigned_project'))]"/>
        </record>
        <record id="project_milestone_rule_view_all" model="ir.rule">
            <field name="name">View All Project Milestone</field>
            <field name="model_id" ref="model_project_milestones_schedule"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups"
                   eval="[(4,ref('project_management.group_view_all_project'))]"/>
        </record>
    </data>
</odoo>