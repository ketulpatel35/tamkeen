<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">
    <record model="ir.module.category" id="product_management">
            <field name="name">Product Management</field>
            <field name="sequence">6</field>
        </record>

    <record id="group_products_normal_user" model="res.groups">
        <field name="name">Normal User</field>
        <field name="category_id" ref="product_extension.product_management"/>
    </record>

    <record id="group_view_all_products" model="res.groups">
        <field name="name">View all Products</field>
        <field name="category_id" ref="product_extension.product_management"/>
    </record>

    <record id="group_products_update" model="res.groups">
        <field name="name">Update Product Information</field>
        <field name="category_id" ref="product_extension.product_management"/>
        <field name="implied_ids" eval="[(4, ref('product_extension.group_view_all_products'))]"/>
    </record>

    <record id="group_all_products_full_access" model="res.groups">
        <field name="name">Product Master</field>
        <field name="category_id" ref="product_extension.product_management"/>
        <field name="implied_ids" eval="[(4, ref('product_extension.group_products_update'))]"/>
    </record>


    <record id="product.group_product_pricelist" model="res.groups">
        <field name="name">Pricelists On Product</field>
        <field name="category_id" ref="product_extension.product_management"/>
    </record>

    <record id="product.group_stock_packaging" model="res.groups">
        <field name="name">Manage Product Packaging</field>
        <field name="category_id" ref="product_extension.product_management"/>
    </record>

    <record id="product.group_mrp_properties" model="res.groups">
        <field name="name">Manage Properties of Product</field>
        <field name="category_id" ref="product_extension.product_management"/>
    </record>

    <record id="product.group_product_variant" model="res.groups">
        <field name="name">Manage Product Variants</field>
        <field name="category_id" ref="product_extension.product_management"/>
    </record>

    </data>
</odoo>
