<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Service Configuration Panel -->
        <record id="service_configuration_panel_form_coc" model="ir.ui.view">
            <field name="name">service.configuration.panel.form.coc</field>
            <field name="model">service.configuration.panel</field>
            <field name="inherit_id" ref="service_configuration_panel.service_configuration_panel_form"/>
            <field name="arch" type="xml">
                <field name="ceo_approval" position="before">
                    <field name="procurement_second_review"
                           attrs="{'invisible':[('is_coc','=',False)]}"/>
                    <field name="procurement_second_review_email"
                           attrs="{'invisible':[('is_coc','=',False)]}"/>
                    <field name="business_owner_approval"
                           attrs="{'invisible':[('is_coc','=',False)]}"/>
                    <field name="pmo_approval"
                           attrs="{'invisible':[('is_coc','=',False)]}"/>
                    <field name="pmo_approval_email"
                           attrs="{'invisible':[('is_coc','=',False)]}"/>
                    <field name="finance_processing"
                           attrs="{'invisible':[('is_coc','=',False)]}"/>
                    <field name="finance_processing_email"
                           attrs="{'invisible':[('is_coc','=',False)]}"/>
                    <field name="is_coc" invisible="1"/>
                </field>
            </field>
        </record>

        <!-- Action for COC Configuration Panel -->
        <record model="ir.actions.act_window" id="coc_configuration">
            <field name="name">COC Service Congifuration Panel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">service.configuration.panel</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'is_coc': 1}</field>
            <field name="domain">[('model_id.model','in',['certificate.of.completion'])]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new service.
                </p>
                <p>
                    Press create button to create a new service.
                </p>
            </field>
        </record>

        <!--Action for coc stage configuration-->
        <record model="ir.actions.act_window"
                id="coc_stage_configuration">
            <field name="name">COC Stages</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">service.panel.displayed.states</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_model_id': 1,
                'coc_request': True}
            </field>
            <field name="domain">[('model_id.model','in',['certificate.of.completion'])]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new stage.
                </p>
                <p>
                    Press create button to create a new stage.
                </p>
            </field>
        </record>

    </data>
</odoo>