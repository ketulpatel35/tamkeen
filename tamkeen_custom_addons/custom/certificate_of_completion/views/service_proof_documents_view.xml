            id="action_certificate_of_completion_proof">
        <field name="name">Certificate of Completion Proofs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">service.proof.documents</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'certificate_of_completion':True}</field>
        <field name="domain">[('model_id.model','=', 'certificate.of.completion')]</field>
