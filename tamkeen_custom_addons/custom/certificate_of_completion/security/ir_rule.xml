<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Normal User -->
        <record id="coc_rule_request_employee" model="ir.rule">
            <field name="name">Normal User</field>
            <field name="model_id" ref="model_certificate_of_completion"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('group_coc_normal_user'))]"/>
            <field name="perm_write" eval="False"/>
        </record>

        <record id="coc_rule_for_manager_approval" model="ir.rule">
            <field name="name">Manager Approval</field>
            <field name="model_id" ref="model_certificate_of_completion"/>
            <field name="domain_force">[('employee_id.department_id.manager_id.user_id.id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('group_coc_manager_approval'))]"/>
            <field name="perm_write" eval="False"/>
        </record>

        <record id="coc_rule_for_vp_approval" model="ir.rule">
            <field name="name">VP Approval</field>
            <field name="model_id" ref="model_certificate_of_completion"/>
            <field name="domain_force">[('employee_id.department_id.vice_president_id.user_id.id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('group_coc_vp_approval'))]"/>
            <field name="perm_write" eval="False"/>
        </record>

        <record id="coc_rule_for_business_owner" model="ir.rule">
            <field name="name">Business Owner Approval</field>
            <field name="model_id" ref="model_certificate_of_completion"/>
            <field name="domain_force">['|',('employee_id.user_id','=',user.id),('business_owner','=', user.id)]</field>
            <field name="groups" eval="[(4,ref('group_coc_business_owner_approval'))]"/>
            <field name="perm_write" eval="False"/>
        </record>

        <record id="coc_rule_finance_processing"
                model="ir.rule">
            <field name="name">Finance Approval</field>
            <field name="model_id" ref="model_certificate_of_completion"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('group_coc_finance_processing'))]"/>
        </record>

        <record id="coc_rule_view_all" model="ir.rule">
            <field name="name">View All COC Requests</field>
            <field name="model_id" ref="model_certificate_of_completion"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('group_coc_view_all_coc'))]"/>
        </record>

        <record id="coc_rule_configuration" model="ir.rule">
            <field name="name">Services Configuration</field>
            <field name="model_id" ref="model_certificate_of_completion"/>
            <field name="groups" eval="[(4,ref('group_coc_configuration'))]"/>
        </record>

    </data>
</odoo>