<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view"
            id="hr_employee_form_inherit_for_deligation_loan">
        <field name="name">hr.employee.form.inherit.for.deligation
            .expense</field>
        <field name="model">hr.employee</field>
        <!--<field name="inherit_id"-->
               <!--ref="hr_attendance_customization.hr_employee_form_inherit_for_deligation"/>-->
        <field name="inherit_id"
               ref="hr_employee_approval_tab.employee_approval_delegation_view_form"/>
        <field name="arch" type="xml">
            <xpath expr='//page[@name="approval_delegation"]/group'
                   position="inside">
                <group string="Expense ">
                    <field name="expense_manager_id" colspan="2" required="1"/>
                    <field name="expense_vp_id" colspan="2" required="1"/>
                    <field name="expense_ceo_id" colspan="2" required="1"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>