<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Time Recording Line Wizard-->
    <record id="time_recording_line_wizard" model="ir.ui.view">
        <field name="name">time.recording.line.wizard</field>
        <field name="model">time.record.action.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="payroll_period_id"/>
                </group>
                <footer>
                    <button name="button_confirm" string="Confirm"
                            type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

