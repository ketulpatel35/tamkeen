<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_invoice_supplier_tree_purhcase_custom"
            model="ir.ui.view">
        <field name="name">inherit
            .invoice.supplier.tree.purhcase.custom</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="po_company_number"/>
            </field>
        </field>
    </record>

    <record id="inherit_invoice_supplier_form_purhcase_custom"
            model="ir.ui.view">
        <field name="name">inherit
            .invoice.supplier.form.purhcase.custom</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="po_company_number" invisible="1"/>
            </field>
            <field name="purchase_id" position="attributes">
                <attribute name="context">{'only_search_by_po':True
                    }</attribute>
                <attribute name="attrs">{'readonly': [('state','!=','draft')]}</attribute>
            </field>
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Payments" name="payment">
                    <field name="payment_move_line_ids"/>
                </page>
            </xpath>
        </field>
    </record>

    <record id="inherit_view_account_invoice_filter_purhcase_custom"
            model="ir.ui.view">
        <field name="name">inherit
            .view.account.invoice.filter.purhcase.custom</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="po_company_number"/>
            </field>
        </field>
    </record>
</odoo>