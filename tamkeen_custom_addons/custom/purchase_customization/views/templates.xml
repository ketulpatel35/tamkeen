<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Purchase Order to RFQ -->
        <record id="email_template_po_to_rfq"
                model="mail.template">
            <field name="name">Approval of Purchase Order</field>
            <field name="model_id" ref="purchase.model_purchase_order" />
            <field name="email_from">${user.email | safe}</field>
            <field name="email_to">${object.company_id.prcrmnt_group_email | safe}</field>
            <field name="email_cc"></field>
            <field name="subject">Purchase Order Approval</field>
            <field name="body_html"><![CDATA[
<p>
Dear Procurement Manager,
<br/>
<br/>
Kindly, approve the ${object.name}
<br />
Source Document : ${object.requisition_id.name}
</p>
<br />
To proceed, Kindly
<a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
<br />
<br />
Kind Regards
<br />
<p > Note: Auto generated message through the ERP System. </p>
]]>
            </field>
        </record>

