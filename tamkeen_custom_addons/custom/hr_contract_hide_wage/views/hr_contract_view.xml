<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Contract -->
    <record id="hr_contract_hide_wage_form" model="ir.ui.view">
        <field name="name">hr.contract.hide.wage.form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='wage']" position="attributes">
                <attribute name="groups">hr_contract_hide_wage.group_hide_wage</attribute>
            </xpath>
        </field>
    </record>

</odoo>
