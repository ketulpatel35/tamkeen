<odoo>
    <data>
        <record model="ir.ui.view" id="survey_form">
            <field name="name">Form view for survey</field>
            <field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[2]/group/field[@name='quizz_mode']" position="after">
                    <field name="for_lead" />
                </xpath>
            </field>
        </record>


        <record model="ir.ui.view" id="survey_user_input_form">
            <field name="name">survey_user_input_form</field>
            <field name="model">survey.user_input</field>
            <field name="inherit_id" ref="survey.survey_user_input_form" />
            <field name="arch" type="xml">
                <field name="type" position="before">
                    <field name="reference_id" attrs="{'readonly':True}" />
                </field>
            </field>
        </record>
    </data>
</odoo>
