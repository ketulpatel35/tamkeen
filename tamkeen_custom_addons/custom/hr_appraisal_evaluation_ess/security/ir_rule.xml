<?xml version="1.0"?>
<openerp>
  <data>

      <record id="employee_see_own_appraisal" model="ir.rule">
          <field name="name">Employee see own Appraisal</field>
          <field name="model_id"
                 ref="hr_appraisal_evaluation.model_employee_appraisal"/>
          <field name="domain_force">['|',('emp_id.user_id.id', '=',
              user.id),('immediate_manager.user_id.id', '=', user.id)]
          </field>
          <field name="groups" eval="[(4,ref('base.group_user'))]"/>
      </record>

      <record id="hr_admin_see_all_appraisal" model="ir.rule">
          <field name="name">HR see All Appraisal</field>
          <field name="model_id"
                 ref="hr_appraisal_evaluation.model_employee_appraisal"/>
          <field name="domain_force">[(1,'=',1)]</field>
          <field name="groups"
                 eval="[(4,ref('hr_admin.group_hr_admin')),(4,ref('hr.group_hr_manager'))]"/>
      </record>

  </data>
</openerp>
