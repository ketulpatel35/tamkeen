<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <record id="property_rule_vendor_view_all" model="ir.rule">
            <field name="name">View All</field>
            <field name="model_id" ref="model_vendor_registration"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('group_vendor_management_view_all'))]"/>
        </record>

        <record id="property_rule_vendor_normal_user" model="ir.rule">
            <field name="name">Normal User</field>
            <field name="model_id" ref="model_vendor_registration"/>
            <field name="domain_force">[('create_uid','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('group_vendor_management_view_all'))]"/>
        </record>
        <record id="property_rule_vendor_config" model="ir.rule">
            <field name="name">Vendor Registration Configuration</field>
            <field name="model_id" ref="model_vendor_registration"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('group_manage_vendor_conf'))]"/>
        </record>
    </data>
</odoo>
