<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="department_transfer_tree_view" model="ir.ui.view">
            <field name="name">hr.department.transfer.tree</field>
            <field name="model">hr.department.transfer</field>
            <field name="arch" type="xml">
                <tree string="Departmental Transfers">
                    <field name="employee_id" />
                    <field name="src_id"/>
                    <field name="dst_id" />
                    <field name="date" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="department_transfer_form_view" model="ir.ui.view">
            <field name="name">hr.department.transfer.form</field>
            <field name="model">hr.department.transfer</field>
            <field name="arch" type="xml">
                <form string="Departmental Transfer">
                    <header>
                        <button name="signal_confirm" type="object" states="draft"
                                string="Confirm" class="oe_highlight" />
                        <button name="signal_pending" type="object" states="confirm"
                                string="Transfer" class="oe_highlight" />
                        <button name="signal_cancel" type="object" states="confirm,pending"
                                string="Cancel" class="oe_highlight" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>

                        <group>
                            <group>
                                <field name="employee_id"
                                       attrs="{'readonly': [('state','!=','draft')]}"
                                       required="1" />
                            </group>
                            <field name="src_id" invisible="1"/>
                            <field name="src_department_id" invisible="1"/>
                            <field name="dst_department_id" invisible="1"/>
                            <field name="src_contract_id" invisible="1"/>
                            <group colspan="4" col="4">
                                <!--<field name="src_func" readonly="1"/>-->
                                <field name="src_func"/>
                                <field name="dst_id" attrs="{'readonly': [
									   ('state','!=','draft')]}"
                                       required="1" />
                                <field name="src_department_func"/>
                                <field name="dist_department_func" />
                            </group>
                            <group colspan="4" col="4" string="Contract Information">
                                <!--<field name="src_department_func" readonly="1"/>-->
                                <field name="src_contract_func" />
                                <!--<field name="src_contract_func"/>-->
                                <!--<field name="dist_department_func" readonly="1"/>-->
                                <field name="dst_contract_id" readonly="1"/>
                                <field name="date" attrs="{'readonly': [
									   ('state','!=','draft')]}"
                                       required="1" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="open_hr_department_transfer" model="ir.actions.act_window">
            <field name="name">Departmental Transfers</field>
            <field name="res_model">hr.department.transfer</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_hr_department_transfer" name="Departmental Transfers"
                  parent="hr.menu_hr_root" sequence="8" groups="hr.group_hr_user"/>
        <menuitem id="menu_hr_department_transfer_child" action="open_hr_department_transfer"
                  parent="menu_hr_department_transfer" groups="hr.group_hr_user"/>

    </data>
</odoo>
