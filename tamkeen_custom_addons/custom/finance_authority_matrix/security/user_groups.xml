        <!-- Accounting & Finance-->
        <record model="res.groups" id="account.group_account_manager">
            <field name="implied_ids"
                   eval="[
                   (4, ref('product_extension.group_all_products_full_access')),
                   (4, ref('groups_invoice_master')),
                   (4, ref('groups_budget_master')),
                   (4, ref('groups_asset_master')),
                   (4, ref('groups_journal_master')),
                   (4, ref('groups_master_account_payment')),
                   (4, ref('base.group_partner_manager')), (4, ref('group_account_reporting'))
                   ]"/>
