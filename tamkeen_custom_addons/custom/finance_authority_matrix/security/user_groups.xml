        <record model="res.groups" id="groups_journal_master">
            <field name="name">Journal Entry Master</field>
            <field name="category_id"
                   ref="journal_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('groups_cancel_journal_entries')),
                   (4, ref('groups_reverse_journal_entries')),
                   (4, ref('groups_post_journal_entries')),
                   (4, ref('groups_create_journal_entries')),
                   ]"/>
