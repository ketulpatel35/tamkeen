            <field name="name">Update Vendor Invoice</field>
            <field name="category_id" ref="invoice_management"/>
            <field name="implied_ids" eval="[(4, ref('groups_view_all_vendor_invoice'))]"/>
        </record>
        <record model="res.groups" id="group_customer_validate_invoice">
            <field name="name">Validate Customer Invoice</field>
            <field name="category_id" ref="invoice_management"/>
        </record>
        <record model="res.groups" id="group_vendor_validate_invoice">
            <field name="name">Validate Vendor Invoice</field>
            <field name="category_id" ref="invoice_management"/>
        </record>

        <record model="res.groups" id="group_customer_refund_invoice">
            <field name="name">Refund Customer Invoice</field>
            <field name="category_id" ref="invoice_management"/>
        </record>
        <record model="res.groups" id="group_first_validate_invoice">
            <field name="name">First Validate Customer Invoice</field>
            <field name="category_id" ref="invoice_management"/>
        </record>
        <record model="res.groups" id="group_submit_vendor_invoice">
            <field name="name">Submit Vendor Invoice</field>
            <field name="category_id" ref="invoice_management"/>
        </record>
        <record model="res.groups" id="group_first_validate_vendor_invoice">
            <field name="name">First Validate Vendor Invoice</field>
            <field name="category_id" ref="invoice_management"/>
        </record>
        <record model="res.groups" id="group_vendor_refund_invoice">
            <field name="name">Refund Vendor Invoice</field>
            <field name="category_id" ref="invoice_management"/>
        </record>

        <record model="res.groups" id="group_set_to_draft_customer_invoice">
            <field name="name">Set to Draft Customer Invoice</field>
            <field name="category_id" ref="invoice_management"/>
        </record>
        <record model="res.groups" id="group_vendor_settodraft_invoice">
            <field name="name">Set to Draft Vendor Invoice</field>
            <field name="category_id" ref="invoice_management"/>
        </record>

