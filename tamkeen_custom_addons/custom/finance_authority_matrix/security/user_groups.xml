        </record>
        <record model="res.groups" id="groups_create_receipts_entries">
            <field name="name">Create/Update Receipts</field>
            <field name="category_id" ref="receipts_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('groups_view_all_receipts_entries'))]"/>
        </record>
        <record model="res.groups" id="groups_receipts_master">
            <field name="name">Receipts Master</field>
            <field name="category_id" ref="receipts_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('groups_create_receipts_entries'))]"/>
        </record>

        <!-- Journal Management -->
        <record model="ir.module.category" id="journal_management">
            <field name="name">Journal Entry Management</field>
