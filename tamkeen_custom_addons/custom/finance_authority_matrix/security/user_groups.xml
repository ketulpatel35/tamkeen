            <field name="implied_ids" eval="[(4, ref('group_account_normal_user'))]"/>
        </record>
        <record model="res.groups" id="groups_create_sale_account_payment">
            <field name="name">Register Sale Payment</field>
            <field name="category_id" ref="category_account_payment"/>
            <field name="implied_ids" eval="[(4, ref('groups_view_all_sale_account_payment'))]"/>
        </record>

        <record model="res.groups"
                id="groups_view_all_purchase_account_payment">
            <field name="name">View All Purchase Payment</field>
            <field name="implied_ids" eval="[(4, ref('group_account_normal_user'))]"/>
            <field name="category_id" ref="category_account_payment"/>
        </record>
        <record model="res.groups" id="groups_create_purchase_account_payment">
            <field name="name">Register Purchase Payment</field>
            <field name="category_id" ref="category_account_payment"/>
            <field name="implied_ids" eval="[(4, ref('groups_view_all_purchase_account_payment'))]"/>
        </record>
        <record model="res.groups" id="groups_confirm_account_payment">
            <field name="name">Confirm Payment</field>
            <field name="category_id" ref="category_account_payment"/>
        </record>
        <record model="res.groups" id="groups_cancel_account_payment">
            <field name="name">Cancel Payment</field>
            <field name="category_id" ref="category_account_payment"/>
        </record>

        <record model="res.groups" id="groups_master_account_payment">
            <field name="name">Account Payment Master</field>
            <field name="category_id" ref="category_account_payment"/>
            <field name="implied_ids"
                   eval="[(4, ref('groups_create_sale_account_payment')),
                   (4, ref('groups_create_purchase_account_payment')),
                   (4, ref('groups_confirm_account_payment')),
                   (4, ref('groups_cancel_account_payment'))
                   ]"/>
        </record>

        <!-- Voucher Management -->
        <record model="ir.module.category" id="receipts_management">
            <field name="name">Receipts Management</field>
            <field name="sequence">21</field>
        </record>
        <record model="res.groups" id="groups_view_all_receipts_entries">
            <field name="name">View All Receipts</field>
