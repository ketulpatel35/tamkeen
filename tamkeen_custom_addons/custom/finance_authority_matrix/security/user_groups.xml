            <field name="name">Cancel Customer Invoice</field>
            <field name="category_id" ref="invoice_management"/>
        </record>
        <record model="res.groups" id="group_vendor_cancel_invoice">
            <field name="name">Cancel Vendor Invoice</field>
            <field name="category_id" ref="invoice_management"/>
        </record>
        <record model="res.groups" id="groups_invoice_master">
            <field name="name">Invoice Master</field>
            <field name="category_id" ref="invoice_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_customer_validate_invoice')), (4, ref('group_vendor_validate_invoice')),
                    (4, ref('group_vendor_cancel_invoice')), (4, ref('group_customer_cancel_invoice')),
                    (4, ref('group_set_to_draft_customer_invoice')), (4, ref('group_vendor_settodraft_invoice')),
                    (4, ref('group_customer_refund_invoice')), (4, ref('group_vendor_refund_invoice')), (4, ref('group_submit_vendor_invoice')),
                    (4, ref('group_first_validate_invoice')), (4, ref('group_first_validate_vendor_invoice')),
                    ]"/>
        </record>

         <!-- Account Payment -->
        <record model="ir.module.category" id="category_account_payment">
