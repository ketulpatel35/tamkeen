            <field name="name">Create/Update Journal Entries</field>
            <field name="category_id" ref="journal_management"/>
            <field name="implied_ids" eval="[(4, ref('groups_view_all_journal_entries'))]"/>
        </record>
        <record model="res.groups" id="groups_cancel_journal_entries">
            <field name="name">Cancel Journal Entries</field>
            <field name="category_id" ref="journal_management"/>
