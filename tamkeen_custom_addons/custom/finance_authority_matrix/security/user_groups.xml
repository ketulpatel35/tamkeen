<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">

        <!-- Account Normal User -->
        <record model="res.groups" id="group_account_normal_user">
            <field name="name">Account Normal User</field>
            <field name="implied_ids"
                   eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Normal User -->
        <record model="res.groups" id="group_normal_user_account">
            <field name="name">Normal User</field>
            <field name="implied_ids"
                   eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="base.module_category_accounting_and_finance"/>
        </record>

        <!-- Invoice Management -->
        <record model="ir.module.category" id="invoice_management">
            <field name="name">Invoice Management</field>
            <field name="sequence">19</field>
        </record>
        <record model="res.groups" id="groups_view_all_customer_invoice">
            <field name="name">View All Customer Invoice</field>
            <field name="category_id" ref="invoice_management"/>
            <field name="implied_ids" eval="[(4, ref('group_account_normal_user'))]"/>
        </record>
        <record model="res.groups" id="groups_view_all_vendor_invoice">
            <field name="name">View All Vendor Invoice</field>
            <field name="category_id" ref="invoice_management"/>
            <field name="implied_ids" eval="[(4, ref('group_account_normal_user'))]"/>
        </record>
        <record model="res.groups" id="groups_create_customer_invoice">
            <field name="name">Create Customer Invoice</field>
            <field name="category_id" ref="invoice_management"/>
            <field name="implied_ids" eval="[(4, ref('groups_view_all_customer_invoice'))]"/>
        </record>
        <record model="res.groups" id="groups_update_customer_invoice">
            <field name="name">Update Customer Invoice</field>
            <field name="category_id" ref="invoice_management"/>
            <field name="implied_ids" eval="[(4, ref('groups_view_all_customer_invoice'))]"/>
        </record>
        <record model="res.groups" id="groups_create_vendor_invoice">
            <field name="name">Create Vendor Invoice</field>
            <field name="category_id" ref="invoice_management"/>
            <field name="implied_ids" eval="[(4, ref('groups_view_all_vendor_invoice'))]"/>
        </record>
