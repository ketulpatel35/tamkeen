<odoo>
    <data>
        <record id="account_asset_form_inherit_for_buttons" model="ir.ui.view">
            <field name="name">account.asset.asset.form.inherit.for.buttons</field>
            <field name="model">account.asset.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_asset_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='validate']" position="attributes">
                    <attribute name="groups">finance_authority_matrix.groups_asset_confirm</attribute>
                </xpath>

                <xpath expr="//button[@name='set_to_close']" position="attributes">
                    <attribute name="groups">finance_authority_matrix.groups_asset_closing</attribute>
                </xpath>

                <xpath expr="//button[@name='set_to_draft']" position="attributes">
                    <attribute name="groups">finance_authority_matrix.groups_update_all_asset</attribute>
                </xpath>

                <xpath expr="//button[@name='compute_depreciation_board']" position="attributes">
                    <attribute name="groups">finance_authority_matrix.groups_compute_depreciation_asset</attribute>
                </xpath>

                <xpath expr="//button[@name='%(account_asset.action_asset_modify)d']" position="attributes">
                    <attribute name="groups">finance_authority_matrix.groups_modify_depreciation_asset</attribute>
                </xpath>

                <xpath expr="//button[@name='open_entries']" position="attributes">
                    <attribute name="groups">finance_authority_matrix.groups_view_all_journal_entries</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>