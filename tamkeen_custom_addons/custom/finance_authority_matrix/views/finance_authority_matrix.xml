        <!-- Journal Entry Form -->
        <record id="account_move_form_manager_post" model="ir.ui.view">
            <field name="name">account.move.form.manager.post</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='post']" position="attributes">
                    <attribute name="groups">finance_authority_matrix.groups_post_journal_entries,account.group_account_invoice</attribute>
                </xpath>
                <xpath expr="//button[@name='button_cancel']" position="attributes">
                    <attribute name="groups">finance_authority_matrix.groups_cancel_journal_entries,account.group_account_manager</attribute>
                </xpath>
                <xpath
                        expr="//button[@name='%(account.action_view_account_move_reversal)d']" position="attributes">
                    <attribute name="groups">finance_authority_matrix.groups_reverse_journal_entries,account.group_account_manager</attribute>
                </xpath>
            </field>
        </record>

        <!-- Inheerit Product view for Accounting -->
        <record id="product_template_form_view_inherit_for_product"
                model="ir.ui.view">
            <field name="name">product.template.form.view.inherit.for.product</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="account.product_template_form_view"/>
            <field name="arch" type="xml">
                <page name="invoicing" position="attributes">
                    <attribute name="groups">finance_authority_matrix.group_account_normal_user</attribute>
                </page>
                <xpath expr="//page[@name='invoicing']//field[@name='property_account_income_id']" position="attributes">
                    <attribute name="groups">finance_authority_matrix.group_account_normal_user</attribute>
                </xpath>
                <xpath expr="//page[@name='invoicing']//field[@name='property_account_expense_id']" position="attributes">
                    <attribute name="groups">finance_authority_matrix.group_account_normal_user</attribute>
                </xpath>
            </field>
        </record>

