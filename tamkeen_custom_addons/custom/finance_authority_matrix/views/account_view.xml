<odoo>
    <data>
        <!-- Account Form View-->
        <record model="ir.ui.view"
                id="account_view_form_inherit_for_remove_create">
            <field name="name">account.view.form.inherit.for.remove.create</field>
            <field name="model">account.account</field>
            <field name="groups_id" eval="[(6, 0, [ref('finance_authority_matrix.group_chart_of_account_view_all')])]"/>
            <field name="inherit_id" ref="account.view_account_form" />
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="create">false</attribute>
                    <attribute name="edit">false</attribute>
                    <attribute name="delete">false</attribute>
                </xpath>
            </field>
        </record>

        <!-- Account Form View-->
        <record model="ir.ui.view"
                id="account_view_form_inherit_for_remove_create_01">
            <field name="name">account.view.form.inherit.for.remove.create.01</field>
            <field name="model">account.account</field>
            <field name="groups_id" eval="[(6, 0, [ref('finance_authority_matrix.group_chart_of_account_master')])]"/>
            <field name="inherit_id" ref="account.view_account_form" />
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="create">true</attribute>
                    <attribute name="edit">true</attribute>
                    <attribute name="delete">true</attribute>
                </xpath>
            </field>
        </record>

        <!-- Account Tree View-->
        <record model="ir.ui.view"
                id="account_view_tree_inherit_for_remove_create">
            <field name="name">account.view.tree.inherit.for.remove.create</field>
            <field name="model">account.account</field>
            <field name="groups_id" eval="[(6, 0, [ref('finance_authority_matrix.group_chart_of_account_view_all')])]"/>
            <field name="inherit_id" ref="account.view_account_list" />
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">false</attribute>
                    <attribute name="edit">false</attribute>
                    <attribute name="delete">false</attribute>
                </xpath>
            </field>
        </record>

        <!-- Account Tree View-->
        <record model="ir.ui.view"
                id="account_view_tree_inherit_for_remove_create_01">
            <field name="name">account.view.tree.inherit.for.remove.create.01</field>
            <field name="model">account.account</field>
            <field name="groups_id" eval="[(6, 0, [ref('finance_authority_matrix.group_chart_of_account_master')])]"/>
            <field name="inherit_id" ref="account.view_account_list" />
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">true</attribute>
                    <attribute name="edit">true</attribute>
                    <attribute name="delete">true</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>