<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_invoice_line_tax_report_form" model="ir.ui.view">
        <field name="name">view.invoice.line.tax.report.form</field>
        <field name="model">tax.report.wiz</field>
        <field name="arch" type="xml">
            <form string="Tax Report">
                <group colspan="4" col="4">
                    <field name="date_range_id"/>
                    <field name="invoice_type"/>
                    <field name="date_from"/>
                    <newline/>
                    <field name="date_to"/>
                </group>
                <separator string="Taxes"/>
                <field name="tax_ids" nolabel="1" colspan="4"/>
                <footer>
                    <button name="button_export_xlsx" string="Export XLSX" type="object"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_invoice_line_tax_report" model="ir.actions.act_window">
        <field name="name">Tax Report</field>
        <field name="res_model">tax.report.wiz</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_invoice_line_tax_report_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="main_menu_invoice_line_tax_report" name="Tax Report" parent="account.menu_finance_reports"
        groups="group_vat_tax_report"/>

    <menuitem parent="main_menu_invoice_line_tax_report" action="action_invoice_line_tax_report" id="menu_invoice_line_tax_report"
        groups="group_vat_tax_report"/>

    <record id="tax_report_xls_output_view" model="ir.ui.view">
        <field name="name">tax.report.xls.output.view</field>
        <field name="model">tax.report.output.wizard</field>
        <field name="arch" type="xml">
            <form string="Excel Output">
                <separator colspan="4" string="Please save file as .xls excel format"/>
                <field name="name" invisible="1"/>
                <field name="xls_output" filename='name' readonly='1'/>
                <footer>
                <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>