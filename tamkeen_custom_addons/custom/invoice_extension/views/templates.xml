<?xml version="1.0"?>
<odoo>
    <data>

    <record id="email_template_invoice_first_level_approval"
            model="mail.template">
                <field name="name">first_level_vendor_bill_approval
                </field>
                <field name="model_id"
                       ref="invoice_extension.model_account_invoice" />
                <field name="email_from">${object.user_id.partner_id.email | safe}</field>
                <field name="email_to">${object.company_id.fi_group_email | safe}</field>
                <field name="email_cc">${ctx['officer_list'] | safe}
                </field>
                <field name="subject">Vendor bill To Be Approved</field>
                <field name="body_html"><![CDATA[
    <p>
    Dear Finance Team,
    <br/>
    <p style="padding-left: 4em;">
    Kindly, approve the Vendor Bill ${(object.name or '')|safe}.
    <br/>
    <br/>
    </p>
    % if ctx["display_link"]:
       To proceed, Kindly <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
    % endif
    <br/>
    <p> Kind Regards </p>
    <br/>
    <p style="font-size:13px; color:blue; border: 1px solid red; width:350px;"> Auto generated message through the ERP System. </p>
                   ]]>
                </field>
        </record>
    </data>
</odoo>
