<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_wage_adjustment_by_employees" model="ir.ui.view">
            <field name="name">Wage adjustment by employees</field>
            <field name="model">wage.adjustment.employees</field>
            <field name="arch" type="xml">
                <form string="Wage Adjustments by Employees">
                    <header>
                        <button icon="fa-cogs" string="Generate"
                                name="create_adjustments"
                                type="object" class="oe_highlight" context="{'create_adjustment': 'True'}" groups="hr_payroll.group_hr_payroll_user"/>
                    </header>
                    <group>
                        <label colspan="4" nolabel="1"
                               string="This wizard will generate wage adjustments for selected employees based on the Effective Date and Adjustment Amount specified in the batch run."/>
                    </group>
                    <group colspan="4">
                        <separator string="Employees" colspan="4"/>
                        <newline/>
                        <field name="employee_ids" nolabel="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_wage_adjustment_by_employees"
                model="ir.actions.act_window">
            <field name="name">Generate Wage Adjustments</field>
            <field name="res_model">wage.adjustment.employees</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wage_adjustment_by_employees"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
