<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Inherit hr employee Apply for all employee -->
        <record id="employee_inherit_up_info_all" model="ir.ui.view">
            <field name="name">employee.inherit.up.info.all</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="name" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
                <field name="category_ids" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
                <xpath expr="//page[@name='public']" position="attributes">
                    <attribute name="groups">hr_employee_customization.group_view_emp_info</attribute>
                </xpath>
                <field name="work_email" position="after">
                    <field name="is_self_employee" invisible="1"/>
                </field>
                <field name="address_id" position="attributes">
                    <attribute name="required">0</attribute>
                    <attribute name="attrs">
                        {'readonly':[('is_self_employee', '!=', True)]}
                    </attribute>
                </field>
                <field name="work_phone" position="attributes">
                    <attribute name="attrs">
                        {'readonly': [('is_self_employee', '!=', True)]}
                    </attribute>
                </field>
                <field name="work_location" position="attributes">
                    <attribute name="attrs">
                        {'readonly': [('is_self_employee', '!=', True)]}
                    </attribute>
                </field>
                <field name="marital" position="attributes">
                    <attribute name="attrs">
                        {'readonly': [('is_self_employee', '!=', True)]}
                    </attribute>
                </field>
                <field name="mobile_phone" position="attributes">
                    <attribute name="attrs">
                        {'readonly': [('is_self_employee', '!=', True)]}
                    </attribute>
                </field>
                <field name="work_email" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
                <field name="country_id" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
                <field name="identification_id" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
                <field name="gender" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
                <field name="birthday" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
            </field>
        </record>

