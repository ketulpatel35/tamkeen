<odoo>

    <!-- Appraisal Performance Search View -->
    <record id="org_pa_search_view_ess" model="ir.ui.view">
        <field name="name">org.performance.appraisal.search.view.ess</field>
        <field name="model">performance.appraisal</field>
        <field name="inherit_id"
               ref="org_performance_appraisal.performance_appraisal_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter" position="after">
                <!-- Pending Approval -->
                <filter string="Pending Approval" name="pa_pending_approval"
                        domain="['|','&amp;',('employee_id.pa_manager_id.user_id.id','=',uid),('state','=','mngr_approval'),'|','&amp;',('employee_id.pa_vp_id.user_id.id','=',uid),('state','=','vp_approval'),'&amp;',('employee_id.pa_ceo_id.user_id.id','=',uid),('state','=','ceo_approval')]"/>
            </xpath>
        </field>
    </record>

    <!-- Appraisal Performance Action ESS -->
    <record id="pa_req_ess_action_view"
            model="ir.actions.act_window">
        <field name="name">All Appraisal Performance</field>
        <field name="res_model">performance.appraisal</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('employee_id.user_id.id','=',uid)]</field>
        <field name="context">
            {'readonly_by_pass': True}
        </field>
    </record>

    <!-- Action for MSS -->
    <record id="action_pa_requests_approval_mss"
            model="ir.actions.act_window">
        <field name="name">Appraisal Performance Request To Approve</field>
        <field name="res_model">performance.appraisal</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_pa_pending_approval':1,'readonly_by_pass': True}</field>
        <field name="domain">['|',('employee_id.pa_manager_id.user_id.id','=',uid),'|',('employee_id.pa_vp_id.user_id.id','=',uid),('employee_id.pa_ceo_id.user_id.id','=',uid)]</field>
        <field name="filter" eval="True"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                For approval only.
            </p>
            <p>
                For approval only.
            </p>
        </field>
    </record>

</odoo>