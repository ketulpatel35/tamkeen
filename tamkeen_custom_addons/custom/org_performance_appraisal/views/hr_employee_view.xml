<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view"
            id="hr_employee_form_for_performance_appraisal">
        <field name="name">hr.employee.for.performance.appraisal</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id"
               ref="hr_employee_approval_tab.employee_approval_delegation_view_form"/>
        <field name="arch" type="xml">
            <xpath expr='//page[@name="approval_delegation"]/group'
                   position="inside">
                <group string="Appraisal Performance">
                    <field name="pa_manager_id" colspan="2" required="1" options="{'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                    <field name="pa_vp_id" colspan="2" required="1" options="{'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                    <field name="pa_ceo_id" colspan="2" required="1" options="{'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>