<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- pa value Form View -->
    <record id="pa_value_form_views" model="ir.ui.view">
        <field name="name">pa.value.form.view</field>
        <field name="model">pa.value</field>
        <field name="arch" type="xml">
            <form string="Appraisal Performance Value" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="code" required="1"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Description..."/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- pa value Tree View -->
    <record id="pa_value_tree_view" model="ir.ui.view">
        <field name="name">pa.value.tree.view</field>
        <field name="model">pa.value</field>
        <field name="arch" type="xml">
            <tree string="Appraisal Performance Value" delete="false">
                <field name="sequence"/>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- pa value Action -->
    <record id="pa_value_action_view"
            model="ir.actions.act_window">
        <field name="name">Value</field>
        <field name="res_model">pa.value</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'readonly_by_pass': True}</field>
    </record>

</odoo>
