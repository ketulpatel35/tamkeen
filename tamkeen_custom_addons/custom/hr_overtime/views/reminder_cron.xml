        <record id="pre_overtime_submit_reminder_cron_email_template"
                model="mail.template">
            <field name="name">Overtime Pre-Approval Submit Reminder</field>
             <!--<field name="email_from">erp@company.com</field>  -->
            <field name="subject">Approval Reminder</field>
            <field name="email_to">${ctx["email_to"] | safe}</field>
            <field name="model_id" ref="hr_overtime.model_overtime_pre_request" />
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
<br>
Kindly, FYI.
<br/>
The request will not go to the approval cycle unless you pressed on "Submit for Approval" button.
% if ctx["display_link"]:
   To proceed, Kindly <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
% endif
<br />
<p> Kind Regards </p>
<br />
<p style="font-size:13px; color:blue; border: 1px solid red; width:350px;"> Auto generated message through the ERP System. </p>
            ]]></field>
        </record>
