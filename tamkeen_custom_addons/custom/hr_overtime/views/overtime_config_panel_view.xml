        <record model="ir.ui.view"
                id="service_configuration_panel_form_inherit_for_overtime">
            <field name="name">service.configuration.panel.form.inherit.for.overtime</field>
            <field name="model">service.configuration.panel</field>
            <field name="inherit_id" ref="service_configuration_panel.service_configuration_panel_form" />
            <field name="arch" type="xml">
                <field name="valid_to_date" position="after">
                    <field name="is_overtime" invisible="1"/>
                </field>
                <notebook position="inside">
                    <page string="Overtime Calculation"
                          attrs="{'invisible':[('is_overtime','=',False)]}">
                        <group colspan="4" col="4">
                            <field name="maximum_hours_per_month"/>
                            <field name="maximum_hours_per_year"/>
                            <field name="overtime_pre_approval_type"/>
                            <field name="pre_request_id"
                                   attrs="{'invisible': [('overtime_pre_approval_type', '=', 'not_available')],
                                   'required': [('overtime_pre_approval_type', '=', 'required')]}"/>
                            <field name="hr_attendance_verification"/>
                        </group>
                        <group>
                            <separator string="Overtime Calculation"/>
                            <newline/>
                            <field name="overtime_calculation_line_ids"
                                   nolabel="1">
                                <form string="Overtime Calculation">
                                    <group colspan="4" col="4">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="type"/>
                                        <field name="rate"/>
                                        <field name="maximum_hour"/>
                                        <field name="active_from_time"
                                               attrs="{'invisible': [('type', '!=', 'daily')]}" placeholder="Time in 24 hours time format" invisible="1"/>
                                        <field name="active_to_time"
                                               attrs="{'invisible': [('type', '!=', 'daily')]}" placeholder="Time in 24 hours time format" invisible="1"/>
                                        <field name="active_after"
                                               placeholder="Minutes after which this policy applies" invisible="1"/>
                                        <field name="service_configuration_panel_id"
                                               invisible="1"/>
                                        <field name="weekly_working_days" invisible="1"/>
                                    </group>
                                </form>
                                <tree string="Overtime Calculation">
                                    <field name="name"/>
                                    <field name="type"/>
                                    <field name="rate"/>
                                    <field name="maximum_hour"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Payroll Rules">
                            <field name="overtime_salary_rule_input"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
        <record model="ir.actions.act_window"
