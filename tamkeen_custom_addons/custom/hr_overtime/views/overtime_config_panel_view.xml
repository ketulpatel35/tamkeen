            <field name="res_model">service.configuration.panel</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'overtime_rquest': 1}</field>
            <!--<field name="domain">[('model_id.model','in',['overtime.statement.request', 'overtime.pre.request'])]</field>-->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new service.
                </p>
                <p>
                    Press create button to create a new service.
                </p>
            </field>
        </record>
