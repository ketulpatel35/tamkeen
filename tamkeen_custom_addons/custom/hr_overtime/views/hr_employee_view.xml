<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view"
            id="hr_employee_form_inherit_for_deligation_overtime">
        <field name="name">hr.employee.form.inherit.for.deligation.overtime</field>
        <field name="model">hr.employee</field>
        <!--<field name="inherit_id"-->
               <!--ref="hr_attendance_customization.hr_employee_form_inherit_for_deligation"/>-->
        <field name="inherit_id" ref="hr_employee_approval_tab.employee_approval_delegation_view_form"/>
        <field name="arch" type="xml">
            <xpath expr='//page[@name="approval_delegation"]/group'
                   position="inside">
                <group string="Overtime">
                    <field name="overtime_manager_id" colspan="2"
                           required="1" options="{'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                    <field name="overtime_vp_id" colspan="2" required="1" options="{'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                    <field name="overtime_ceo_id" colspan="2" required="1" options="{'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="hr_contract_for_hourly_rate" model="ir.ui.view">
            <field name="name">hr.contract.for.hourly.rate</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Extra">
                        <group>
                            <field name="hourly_rate" required="1"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

</odoo>