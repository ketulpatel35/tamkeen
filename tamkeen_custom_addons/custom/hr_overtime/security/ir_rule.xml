<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">


    <record id="overtime_rule_request_employee" model="ir.rule">
        <field name="name">Normal User</field>
        <field name="model_id" ref="model_overtime_pre_request"/>
        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('group_overtime_normal_user'))]"/>
    </record>
    <record id="overtime_rule_request_manager" model="ir.rule">
        <field name="name">Manager Approval</field>
        <field name="model_id" ref="model_overtime_pre_request"/>
        <field name="domain_force">[('employee_id.overtime_manager_id.user_id.id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('group_overtime_manager_approval'))]"/>
    </record>
    <record id="overtime_rule_request_vp" model="ir.rule">
        <field name="name">VP Approval</field>
        <field name="model_id" ref="model_overtime_pre_request"/>
        <field name="domain_force">[('employee_id.overtime_vp_id.user_id.id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('group_overtime_vp_approval'))]"/>
    </record>

    <record id="overtime_rule_hr_approval_srvs" model="ir.rule">
        <field name="name">HR Approval</field>
        <field name="model_id" ref="model_overtime_pre_request"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('group_overtime_hr_approval'))]"/>
    </record>
    <record id="overtime_rule_budget_approval_srvs" model="ir.rule">
        <field name="name">Budget Approval</field>
        <field name="model_id" ref="model_overtime_pre_request"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('group_overtime_budget_approval'))]"/>
    </record>
    <record id="overtime_rule_ceo_approval_srvs" model="ir.rule">
        <field name="name">CEO Approval</field>
        <field name="model_id" ref="model_overtime_pre_request"/>
        <field name="domain_force">[('employee_id.overtime_ceo_id.user_id.id','=',user.id)]</field>
        <!-- <field name="domain_force">[('service_type_id.ceo_approval','=',True)]</field> -->
        <field name="groups" eval="[(4,ref('group_overtime_ceo_approval'))]"/>
    </record>
    <record id="overtime_rule_all_srvs" model="ir.rule">
        <field name="name">View All Overtime Requests</field>
        <field name="model_id" ref="model_overtime_pre_request"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('group_overtime_view_all_overtime'))]"/>
    </record>
    <record id="overtime_rule_request_general_manager" model="ir.rule">
        <field name="name">Services Configuration</field>
        <field name="model_id" ref="model_overtime_pre_request"/>
        <!--<field name="domain_force">[('model_id.model','in',['overtime.statement.request', 'overtime.pre.request'])]</field>-->
        <field name="groups" eval="[(4,ref('group_overtime_config'))]"/>
    </record>

    </data>
</odoo>
