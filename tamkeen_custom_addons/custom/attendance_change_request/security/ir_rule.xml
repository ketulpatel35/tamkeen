          <field name="domain_force">[('employee_id.attendance_manager_id.user_id.id','=', user.id)]
          </field>
          <field name="groups" eval="[(4,ref('hr_attendance.group_hr_attendance_manager'))]"/>
      </record>

      <record id="hr_admin_see_all_att_change_request" model="ir.rule">
          <field name="name">HR see All Attendance Change Request</field>
