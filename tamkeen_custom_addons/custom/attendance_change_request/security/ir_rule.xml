<odoo>
  <data>

      <record id="employee_see_own_att_change_request" model="ir.rule">
          <field name="name">Employee see own Attendance Change Request</field>
          <field name="model_id"
                 ref="attendance_change_request.model_attendance_change_request"/>
          <field name="domain_force">[('employee_id.user_id.id', '=',user.id)]
          </field>
          <field name="groups" eval="[(4,ref('base.group_user'))]"/>
      </record>

      <record id="manager_attendance_change_request" model="ir.rule">
          <field name="name">Manager see his Employee Chane Request</field>
