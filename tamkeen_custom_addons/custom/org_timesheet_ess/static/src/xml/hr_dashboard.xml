<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="hr_dashboard.dashboard">
        <t t-jquery='.main-dashboard' t-operation='append'>
            <!-- Time Sheets -->
            <div class="col-md-3">
                <div class="dash-box dash-box-color-1">
                    <div class="dash-box-icon">
                        <i class="fa fa-clock-o"/>
                    </div>
                    <div class="dash-box-body">
                        <span class="dash-box-count">Timesheets</span>
                        <div class="dash-btn">
                            <button class="btn btn-info btn-xs timesheets_to_approve">
                                Requests to Approve
                            </button>
                            <span class="btn btn-info btn-xs-num timesheets_to_approve">
                                <t t-esc="widget.employee_data.timesheets_to_approve"/>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </t>
</templates>