        <record model="ir.rule" id="manager_expense_rule">
            <field name="name">Manager Expense</field>
            <field name="model_id" ref="hr_expense.model_hr_expense"/>
            <field name="groups" eval="[(4, ref('group_personnel_head')),(4, ref('group_personnel_officer')),(4, ref('group_recuitement_officer')),(4, ref('group_recuitement_officer')),(4, ref('group_employee_manager')),(4, ref('group_hr_planning_head'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="global" eval="False"/>
        </record>

        <record model="ir.rule" id="employee_payslip_rule">
            <field name="name">Employee Payslip</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="groups" eval="[(4, ref('group_personnel_head')),(4, ref('group_personnel_officer')),(4, ref('group_recuitement_officer')),(4, ref('group_recuitement_officer')),(4, ref('group_employee_manager'))]"/>
            <field name="domain_force">['|', ('employee_id.user_id', '=', user.id), ('employee_id.department_id.manager_id.user_id', '=', user.id)]</field>
            <field name="global" eval="False"/>
        </record>

        <record model="ir.rule" id="HR_officer_contract_rule">
            <field name="name">HR Officer Contract</field>
            <field name="model_id" ref="hr_contract.model_hr_contract"/>
            <field name="groups" eval="[(4, ref('group_personnel_head')),(4, ref('group_personnel_officer')),(4, ref('group_recuitement_officer')),(4, ref('group_recuitement_officer')),(4, ref('group_employee_manager'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="global" eval="False"/>
        </record>

        <record model="ir.rule" id="manager_hr_analytic_rule">
            <field name="name">Manager HR Analytic Timesheet</field>
            <field name="model_id" ref="analytic.model_account_analytic_line"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_personnel_head')),(4, ref('group_personnel_officer')),(4, ref('group_recuitement_officer')),(4, ref('group_recuitement_officer')),(4, ref('group_hr_planning_head'))]"/>
            <field name="global" eval="False"/>
        </record>

        <record model="ir.rule" id="manager_attendance_rule">
            <field name="name">Manager Attendance</field>
            <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_personnel_head')),(4, ref('group_personnel_officer')),(4, ref('group_recuitement_officer')),(4, ref('group_recuitement_officer')),(4, ref('group_hr_planning_head'))]"/>
            <field name="global" eval="False"/>
        </record>

