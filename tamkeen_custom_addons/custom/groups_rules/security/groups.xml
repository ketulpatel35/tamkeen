        <record model="ir.rule" id="holidays_officer_rule">
            <field name="name">Holidays Officer</field>
            <field name="model_id" ref="hr_holidays.model_hr_holidays"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('group_personnel_head')),(4, ref('group_personnel_officer')),(4, ref('group_recuitement_officer')),(4, ref('group_recuitement_officer'))]"/>
            <field name="global" eval="False"/>
        </record>

        <record model="ir.rule" id="job_positions_hr_officer_rule">
            <field name="name">Job Positions: HR Officer</field>
            <field name="model_id" ref="hr.model_hr_job"/>
            <field name="groups" eval="[(4, ref('group_personnel_head')),(4, ref('group_personnel_officer')),(4, ref('group_recuitement_officer')),(4, ref('group_recuitement_officer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="global" eval="False"/>
        </record>

        <record model="ir.rule" id="leaves_officer_rule">
            <field name="name">Leaves Officer</field>
            <field name="model_id" ref="resource.model_resource_calendar"/>
            <field name="groups" eval="[(4, ref('group_personnel_head')),(4, ref('group_personnel_officer')),(4, ref('group_recuitement_officer')),(4, ref('group_recuitement_officer'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="global" eval="False"/>
        </record>


        <record model="ir.rule" id="global_window_actions_rule">
            <field name="name">Global Window Actions</field>
            <field name="model_id" ref="base.model_ir_actions_act_window"/>
            <field name="groups" eval="[(4, ref('group_personnel_head')),(4, ref('group_personnel_officer')),(4, ref('group_recuitement_officer')),(4, ref('group_recuitement_officer')),(4, ref('group_hr_planning_head'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="global" eval="False"/>
        </record>
