<odoo>
    <record id="view_company_form_inhrit_for_unpaid_leave" model="ir.ui.view">
            <field name="name">res.company.form.for.unpaid.leave</field>
            <field name="model">res.company</field>
            <field name="inherit_id"
                   ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website']" position="after">
                    <field name="minimum_allowed_unpaid_days"/>
                </xpath>
            </field>
        </record>
</odoo>