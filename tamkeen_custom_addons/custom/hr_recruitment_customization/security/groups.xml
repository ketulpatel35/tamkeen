        <record id="group_web_service" model="res.groups">
            <field name="name">Recruitment Portal</field>
            <field name="category_id" ref="base.module_category_hr_recruitment"/>
        </record>
        <record id="view_all_recruitment_data" model="res.groups">
            <field name="name">View All Recruitment Data</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
