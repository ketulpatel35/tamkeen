                <!--<field name="t_and_c" nolabel="1"/>-->
                <!--</group>-->
                <!--</group>-->
                <!--</page>-->

                <!--</xpath>-->

            </field>
        </record>

        <record id="purchase_config_settings_form_view_inherit"
                model="ir.ui.view">
            <field name="name">purchase.config.settings</field>
            <field name="model">purchase.config.settings</field>
            <field name="inherit_id"
                   ref="purchase.view_purchase_configuration"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <group string="General Terms and Conditions">
                        <field name="notes" widget="html"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
