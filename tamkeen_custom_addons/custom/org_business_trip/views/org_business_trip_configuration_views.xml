<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Business Trip policy in Company -->
    <record model="ir.ui.view"
            id="res_company_add_business_trip_policy">
        <field name="name">res.company.add.business.trip.policy</field>
        <field name="inherit_id"
               ref="service_configuration_panel.view_company_inherit_for_service_panel"/>
        <field name="model">res.company</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='policies']"
                   position="inside">
                <group string="Business Trip Policy">
                    <field name="business_trip_policy_id"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- service configuration panel for business trip -->
    <record model="ir.ui.view"
            id="service_configuration_panel_for_business_trip">
        <field name="name">service.configuration.panel.for.business.trip
        </field>
        <field name="model">service.configuration.panel</field>
        <field name="inherit_id"
               ref="service_configuration_panel.service_configuration_panel_form"/>
        <field name="arch" type="xml">
            <field name="valid_to_date" position="after">
                <field name="display_internal_city_only"
                       attrs="{'invisible': [('is_business_trip', '=', False)]}"/>
                <field name="is_business_trip" invisible="1"/>
            </field>
            <xpath expr="//notebook" position="inside">
                <page string="Business Trip Calculation"
                      attrs="{'invisible': [('is_business_trip', '=', False)]}">
                    <field name="business_trip_calculation_ids">
                        <tree string="Business Trip Calculation"
                              editable="bottom">
                            <field name="name" required="1"/>
                            <field name="bt_allowance_id"
                                   required="1"
                                   options="{'no_create': True, 'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="grade_level_ids"
                                   required="1"
                                   options="{'no_create': True, 'no_quick_create': True, 'no_create_edit': True}"
                                   widget="many2many_tags"/>
                            <field name="bt_countries_group_id"
                                   required="1"
                                   options="{'no_create': True, 'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="amount" required="1"/>
                        </tree>
                    </field>
                </page>
                <page string="Accounting Information"
                      name="accounting_information"
                      attrs="{'invisible': [('is_business_trip', '=', False)]}">
                    <group>
                        <group>
                            <field name="product_id"
                                   domain="[('can_be_expensed', '=', True)]"
                                   options="{'no_open': True,'no_create': True,'no_quick_create': True,'no_create_edit': True}"
                                   attrs="{'required':[('is_business_trip', '!=', False)], 'invisible': [('is_business_trip', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="journal_id"
                                   domain="[('type', 'in', ['bank', 'cash'])]"
                                   options="{'no_open': True,'no_create': True,'no_quick_create': True,'no_create_edit': True}"
                                   attrs="{'required':[('is_business_trip', '!=', False)], 'invisible': [('is_business_trip', '=', False)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Service Configuration Panel for Business Trip -->
    <record model="ir.actions.act_window"
            id="action_service_panel_business_trip">
        <field name="name">Service Configuration Panel</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">service.configuration.panel</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'business_trip_model': 1}</field>
        <field name="domain">[('model_id.model','=','org.business.trip')]
        </field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new service.
            </p>
            <p>
                Press create button to create a new service.
            </p>
        </field>
    </record>

    <!-- org Business Trip -->
    <record model="ir.actions.act_window"
            id="action_displayed_stages_business_trip">
        <field name="name">Stages</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">service.panel.displayed.states</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'business_trip_model': 1}</field>
        <field name="domain">[('model_id.model','=','org.business.trip')]
        </field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new stage.
            </p>
            <p>
                Press create button to create a new stage.
            </p>
        </field>
    </record>

    <!-- Business Trip Countries Group Form View -->
    <record id="bt_countries_group_form_views" model="ir.ui.view">
        <field name="name">bt.countries.group.form.views</field>
        <field name="model">bt.countries.group</field>
        <field name="arch" type="xml">
            <form string="Business Trip">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="maximum_allowed_travel_days"/>
                        </group>
                        <group>
                            <field name="code" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Country">
                            <field name="country_ids" widget="many2many"
                                   context="{'want_remaining_country': True}"
                                   options="{'no_create': True,'no_quick_create': True,'no_create_edit': True}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Business Trip Countries Group Tree View -->
    <record id="bt_countries_group_tree_views" model="ir.ui.view">
        <field name="name">bt.countries.group.tree.views</field>
        <field name="model">bt.countries.group</field>
        <field name="arch" type="xml">
            <tree string="Business Trip Countries Group">
                <field name="name"/>
                <field name="code"/>
                <field name="maximum_allowed_travel_days"/>
                <field name="country_ids"/>
            </tree>
        </field>
    </record>

    <!-- Business Trip Countries Group Action view -->
    <record id="bt_countries_group_action_views"
            model="ir.actions.act_window">
        <field name="name">Countries Group</field>
        <field name="res_model">bt.countries.group</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'readonly_by_pass': True}</field>
    </record>

</odoo>