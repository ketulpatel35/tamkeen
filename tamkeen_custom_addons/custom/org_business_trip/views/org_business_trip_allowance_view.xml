<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- business trip items Form View -->
    <record id="bt_allowance_group_form_views" model="ir.ui.view">
        <field name="name">bt.allowance.form.views</field>
        <field name="model">business.trip.allowance</field>
        <field name="arch" type="xml">
            <form string="Business Trip Items">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="account_id" required="1"/>
                        </group>
                        <group>
                            <field name="code" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- business trip items Tree View -->
    <record id="bt_allowance_group_tree_views" model="ir.ui.view">
        <field name="name">bt.allowance.form.views</field>
        <field name="model">business.trip.allowance</field>
        <field name="arch" type="xml">
            <tree string="Business Trip Items">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- business trip items Action view -->
    <record id="business_trip_allowance_action_views"
            model="ir.actions.act_window">
        <field name="name">Business Trip Items</field>
        <field name="res_model">business.trip.allowance</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'readonly_by_pass': True}</field>
    </record>

</odoo>