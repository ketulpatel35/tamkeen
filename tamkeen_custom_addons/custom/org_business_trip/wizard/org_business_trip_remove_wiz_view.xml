<odoo>

    <record id="org_business_trip_remove_wizard_view" model="ir.ui.view">
        <field name="name">org.business.trip.remove.wizard.view</field>
        <field name="model">org.business.trip.remove.wiz</field>
        <field name="arch" type="xml">
            <form string="Remove Business Trip Request">
                <p class="oe_grey">
                    Are you sure you want to delete the business trip
                    request?
                </p>
                <footer>
                    <button string="Delete"
                            name="remove_service" type="object"
                            default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_business_trip_remove"
                multi="True"
                key2="client_action_multi" name="Delete My Own Request"
                res_model="org.business.trip.remove.wiz"
                src_model="org.business.trip"
                view_mode="form" target="new" view_type="form"
                groups="org_business_trip.group_bt_normal_user"/>

</odoo>