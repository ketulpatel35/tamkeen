<odoo>

    <record id="resource_calendar_form_inherit_for_schedule"
            model="ir.ui.view">
        <field name="name">resource.calendar.form.inherit.for.schedule</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id"
               ref="resource.resource_calendar_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="restday_ids" widget="many2many_tags"/>
                <field name="public_holiday_ids" widget="many2many_tags"/>
                <field name="default_scheduled_hours" widget="float_time"/>
            </field>
            <field name="company_id" position="after">
                <field name="overnight_shift"/>
            </field>
            <field name="manager" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="attendance_ids" position="attributes">
                <attribute name="context">{'default_scheduled_hours': default_scheduled_hours}</attribute>
            </field>
        </field>
    </record>

    <record id="view_resource_calendar_attendance_tree_inherit_for_extra"
            model="ir.ui.view">
        <field name="name">resource.calendar.attendance.tree.inherit.for.extra</field>
        <field name="model">resource.calendar.attendance</field>
        <field name="inherit_id"
               ref="resource.view_resource_calendar_attendance_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="sequence"/>
            </field>
            <xpath expr="//tree/field[@name='hour_from']"
                   position="attributes">
                <attribute name="string">On Duty Time</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='hour_to']"
                   position="attributes">
                <attribute name="string">Off Duty Time</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='hour_from']"
                   position="before">
                <field name="scheduled_hours" widget="float_time"/>
                <field name="flexible_hours" widget="float_time"/>
            </xpath>
            <xpath expr="//tree/field[@name='hour_to']"
                   position="after">
                <field name="late_time" widget="float_time"/>
                <field name="leave_early_time" widget="float_time"/>
                <field name="beginning_in" widget="float_time"/>
                <field name="beginning_out" widget="float_time"/>
                <field name="ending_in" widget="float_time"/>
                <field name="ending_out" widget="float_time"/>
            </xpath>
            <field name="date_from" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="date_to" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <record id="resource.menu_resource_calendar" model="ir.ui.menu">
        <field name="parent_id"
               ref="organization_structure.menu_org_configuration"/>
        <field name="sequence">3</field>
    </record>
</odoo>