<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="refuse_reason_form_view" model="ir.ui.view">
            <field name="name">refuse.reason.form.view</field>
            <field name="model">refuseleave.reason</field>
            <field name="arch" type="xml">
                <form string="Refuse Reason">
                    <group>
                        <field name="reason" required="1"/>
                    </group>
                    <footer>
                        <button name="refuseaction" string="Confirm"
                                type="object" class="btn-primary" context="{'refuse_approval': True}"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
