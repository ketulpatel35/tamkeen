<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <record id="rule_leave_summary_for_employee" model="ir.rule">
            <field name="name">Employee Leave Summary</field>
            <field name="model_id" ref="model_employee_leave_summary"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('hr_holidays_extension.group_leave_manage_normal_user'))]"/>
        </record>
        <record id="rule_leave_summary_for_officer" model="ir.rule">
            <field name="name">Officer Leaves Summary</field>
            <field name="model_id" ref="model_employee_leave_summary"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('hr_holidays.group_hr_holidays_user'))]"/>
        </record>
    </data>

    <delete model="ir.rule" id="hr_holidays.property_rule_holidays_employee_write"/>
    <delete model="ir.rule" id="hr_holidays.property_rule_holidays_employee"/>
    <delete model="ir.rule" id="hr_holidays.property_rule_holidays_officer"/>

    <record id="property_rule_leave_employee" model="ir.rule">
        <field name="name">Normal Employee</field>
        <field name="model_id" ref="model_hr_holidays"/>
        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('hr_holidays_extension.group_leave_manage_normal_user'))]"/>
        <field name="perm_write" eval="False"/>
    </record>
    <record id="property_rule_leave_manager" model="ir.rule">
        <field name="name">Manager Approval</field>
        <field name="model_id" ref="model_hr_holidays"/>
        <field
                name="domain_force">[('employee_id.leave_manager_id.user_id.id', '=',user.id)]</field>
        <field name="groups" eval="[(4,ref('hr_holidays_extension.group_leave_bu_manager_approval'))]"/>
        <field name="perm_write" eval="False"/>
    </record>

    <record id="property_rule_leave_vp" model="ir.rule">
        <field name="name">VP Approval</field>
        <field name="model_id" ref="model_hr_holidays"/>
        <field name="domain_force">[('employee_id.leave_vp_id.user_id.id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('group_leave_vp_approval'))]"/>
    </record>

    <record id="property_rule_hr_approval_srvs" model="ir.rule">
        <field name="name">HR Approval</field>
        <field name="model_id" ref="model_hr_holidays"/>
        <field name="domain_force">[('holiday_status_id.hr_appr','=',True)]</field>
        <field name="groups" eval="[(4,ref('hr_holidays.group_hr_holidays_user'))]"/>
    </record>

    <record id="property_rule_ceo_approval_srvs" model="ir.rule">
        <field name="name">CEO Approval</field>
        <field name="model_id" ref="model_hr_holidays"/>
        <!--<field name="domain_force">[('holiday_status_id.ceo_appr','=',True)]</field>-->
        <field name="domain_force">[('employee_id.leave_ceo_id.user_id.id',
            '=',user.id)]</field>
        <field name="groups" eval="[(4,ref('hr_holidays_extension.group_leave_ceo_approval'))]"/>
    </record>
    <record id="property_rule_all_srvs" model="ir.rule">
        <field name="name">View All Leaves Requests</field>
        <field name="model_id" ref="model_hr_holidays"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('hr_holidays_extension.group_leave_all_requests'))]"/>
    </record>

    <record id="resource_leaves_ceo" model="ir.rule">
        <field name="name">Leaves CEO</field>
        <field name="model_id" ref="hr_holidays.model_resource_calendar_leaves"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('hr_holidays_extension.group_leave_ceo_approval'))]"/>
    </record>
