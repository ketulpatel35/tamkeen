<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        
        <record id="hr_payroll_register_tree" model="ir.ui.view">
            <field name="name">hr.payroll.register.tree</field>
            <field name="model">hr.payroll.register</field>
            <field name="arch" type="xml">
                <tree string="Payroll Registers">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record id="hr_payroll_register_form" model="ir.ui.view">
            <field name="name">hr.payroll.register.form</field>
            <field name="model">hr.payroll.register</field>
            <field name="arch" type="xml">
                <form string="Payroll Register" >
                    <header>
                        <button name="%(action_create_runs)d" type="action" string="Create Payslips" class="oe_highlight" groups="hr_payroll.group_hr_payroll_user"/>
                        <button name="action_delete_runs" type="object" string="Remove All Payslips"
                                confirm="This will delete all payslip records for this month. Are you sure you want to continue?" groups="hr_payroll.group_hr_payroll_user"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="date_start" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                            <field name="date_end" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
                        </group>
                    </group>
                    <newline/>
                    <field name="run_ids" colspan="4" nolabel="1">
                        <tree string="Payslip Runs by Department">
                            <field name="name"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>
        
        <record id="open_payroll_registers" model="ir.actions.act_window">
            <field name="name">Payroll Registers</field>
            <field name="res_model">hr.payroll.register</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="hr_payroll_register_tree"/>
        </record>

        <menuitem id="menu_payroll_register"
            action="open_payroll_registers"
            sequence="30"/>
        
    </data>
</openerp>
