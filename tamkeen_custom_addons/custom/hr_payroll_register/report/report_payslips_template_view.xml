<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_payslips_template">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="report.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row">
                            <t t-foreach="o.run_ids" t-as="run_rec">
                                <t t-foreach="get_details_by_payslip(run_rec)" t-as="run_data">
                                    <table class="table table-bordered foobar" width="100%" height="100%"
                                        style="border: 1px solid #000000;font-size:13px;align:center;">
                                        <tr>
                                            <td><b>Employee</b></td>
                                            <td><span t-esc="run_data.get('name', '')"/></td>
                                            <td><b>Identification No</b></td>
                                            <td><span t-esc="run_data.get('id_no', '')"/></td>
                                        </tr>
                                        <tr>
                                            <td><b>From Date</b></td>
                                            <td><span t-esc="run_data.get('date_from', '')"/></td>
                                            <td><b>To Date</b></td>
                                            <td><span t-esc="run_data.get('date_to', '')"/></td>
                                        </tr>
                                        <tr>
                                            <td><b>Earnings</b></td>
                                            <td colspan="3"></td>
                                        </tr>
                                        <tr>
                                            <td><b>Deductions</b></td>
                                            <td colspan="3"></td>
                                        </tr>
                                        <tr>
                                            <td><b>Basic</b></td>
                                            <td><span t-esc="run_data.get('salary', 0.00)"/></td>
                                            <td><b>FIT</b></td>
                                            <td><span t-esc="run_data.get('fit', 0.00)"/></td>
                                        </tr>
                                        <tr>
                                            <td><b>Net Pay</b></td>
                                            <td><span t-esc="run_data.get('net', 0.00)"/></td>
                                            <td><b>OT</b></td>
                                            <td><span t-esc="run_data.get('ot', 0.00)"/></td>
                                        </tr>
                                        <tr>
                                            <td><b>Pension Fund</b></td>
                                            <td><span t-esc="run_data.get('ee_pension', 0.00)"/></td>
                                            <td><b>Transport</b></td>
                                            <td><span t-esc="run_data.get('transportation', 0.00)"/></td>
                                        </tr>
                                        <tr>
                                            <td><b>Others</b></td>
                                            <td><span t-esc="run_data.get('deductions', 0.00)"/></td>
                                            <td><b>Annual Leave</b></td>
                                            <td><span t-esc="run_data.get('LVANNUAL', 0.00)"/></td>
                                        </tr>
                                        <tr>
                                            <td><b>Bonus</b></td>
                                            <td><span t-esc="run_data.get('bonus', 0.00)"/></td>
                                            <td><b>Total Deductions</b></td>
                                            <td><span t-esc="run_data.get('deductions_total', 0.00)"/></td>
                                        </tr>
                                        <tr>
                                            <td><b>Other</b></td>
                                            <td colspan="3"><span t-esc="run_data.get('allowances', 0.00)"/></td>
                                        </tr>
                                        <tr>
                                            <td><b>Taxable</b></td>
                                            <td colspan="3"><span t-esc="run_data.get('taxable_gross', 0.00)"/></td>
                                        </tr>
                                    </table>
                                    <b><hr/></b>
                                </t>
                            </t>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>