<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- HR Job Template Tree View-->
    <record id="hr_job_template_tree_view" model="ir.ui.view">
        <field name="name">hr.job.template.tree.view</field>
        <field name="model">hr.job.template</field>
        <field name="arch" type="xml">
            <tree string="Job Template">
                <field name="name"/>
                <field name="code"/>
                <field name="short_name"/>
                <field name="valid_from"/>
                <field name="valid_to"/>
            </tree>
        </field>
    </record>

    <!-- HR Job Template Search view -->
    <record id="hr_job_template_search_view" model="ir.ui.view">
        <field name="name">hr.job.template.search.view</field>
        <field name="model">hr.job.template</field>
        <field name="arch" type="xml">
            <search string="Job Template">
                <field name="name"/>
                <field name="code"/>
                <field name="short_name"/>
                <field name="valid_from"/>
                <field name="valid_to"/>
            </search>
        </field>
    </record>

    <!-- HR Job Template Form View-->
    <record id="hr_job_template_form_view" model="ir.ui.view">
        <field name="name">hr.position.form.view</field>
        <field name="model">hr.job.template</field>
        <field name="arch" type="xml">
            <form string="Job Template">
                <header>
                    <button name="submit_for_approval"
                            string="Submit of Approval" type="object"
                            class="btn-primary" states="planned"/>
                    <button name="button_approved"
                            string="Approved" type="object"
                            class="btn-primary" states="submitted"/>
                    <button name="button_rejected"
                            string="Reject" type="object" states="submitted"/>
                    <button name="button_active"
                            string="Active" type="object" states="approved" class="btn-primary"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet string="Job Template">
                    <div class="oe_button_box" name="button_box">
                        <button name="related_positions" type="object"
                                class="oe_stat_button" icon="fa-list">
                            <field name="position_count" widget="statinfo" string="Position/s" help="Related Position/s"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="short_name" required="1"/>
                        </group>
                    </group>
                    <group colspan="4" col="4">
                        <field name="valid_from" required="1"/>
                        <field name="valid_to" required="1"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" widget="html"/>
                        </page>
                        <page string="Requirements">
                            <field name="requirements" widget="html"/>
                        </page>
                        <page string="Duties">
                            <field name="duties" widget="html"/>
                        </page>
                        <page string="Extra">
                            <group colspan="4" col="4">
                                <field name="employee_group_id"
                                       domain="[('parent_id','=',False)]" options="{'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                                <field name="employee_sub_group_id"
                                       domain="[('parent_id','=',employee_group_id)]" options="{'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                                <field name="department_staff"/>
                                <field name="company_id"
                                       groups="base.group_multi_company" readonly="1"/>
                           </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- hr.position Action -->
    <record id="action_hr_job_template"
            model="ir.actions.act_window">
        <field name="name">Job Template</field>
        <field name="res_model">hr.job.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>