<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Personnel Area Tree View-->
    <record id="personnel_area_tree_view" model="ir.ui.view">
        <field name="name">personnel.area.tree.view</field>
        <field name="model">personnel.area</field>
        <field name="arch" type="xml">
            <tree string="Personnel Area">
                <field name="name"/>
                <field name="code"/>
                <field name="short_name"/>
                <field name="valid_from"/>
                <field name="valid_to"/>
                <field name="parent_id"/>
            </tree>
        </field>
    </record>

    <!-- HR Employee Group Search view -->
    <record id="personnel_area_search_view" model="ir.ui.view">
        <field name="name">personnel.area.search.view</field>
        <field name="model">personnel.area</field>
        <field name="arch" type="xml">
            <search string="Personnel Area">
                <field name="name"/>
                <field name="code"/>
                <field name="short_name"/>
                <field name="valid_from"/>
                <field name="valid_to"/>
                <field name="parent_id"/>
            </search>
        </field>
    </record>

    <!-- HR Employee Group Form View-->
    <record id="personnel_area_form_view" model="ir.ui.view">
        <field name="name">personnel.area.form.view</field>
        <field name="model">personnel.area</field>
        <field name="arch" type="xml">
            <form string="Personnel Area">
                <sheet string="Personnel Area">
                    <group colspan="4" col="4">
                        <field name="name" required="1"/>
                        <field name="code" required="1"/>
                        <field name="short_name" required="1"/>
                        <field name="valid_from" required="1"/>
                        <field name="valid_to" required="1"/>
                        <field name="parent_id"/>
                        <field name="company_id"
                               groups="base.group_multi_company" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Personnel Area Action -->
    <record id="action_personnel_area_template"
            model="ir.actions.act_window">
        <field name="name">Personnel Area/Sub Area</field>
        <field name="res_model">personnel.area</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>