    <record id="view_partner_tree2_for_position"
            model="ir.ui.view">
        <field name="name">view.partner.tree2.for.position</field>
        <field name="model">hr.employee</field>
        <field name="type">form</field>
        <field name="inherit_id"
               ref="hr.view_partner_tree2"/>
        <field name="arch" type="xml">
            <field name="job_id" position="replace"/>
            <field name="department_id" position="replace"/>
            <field name="company_id" position="replace"/>
            <field name="work_email" position="replace"/>
            <field name="work_phone" position="replace"/>
            <field name="name" position="after">
                <field name="job_id" string="Position"/>
                <field name="department_id" string="Organization Unit"/>
                <field name="parent_id"/>
                <field name="hod_id"/>
            </field>
        </field>
