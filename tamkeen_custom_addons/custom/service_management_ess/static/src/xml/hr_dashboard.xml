<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="hr_dashboard.dashboard">
        <t t-jquery='.main-dashboard' t-operation='append'>
            <!-- Services Management -->
            <t t-if="widget.employee_data.access_service_manager">
                <div class="col-md-3">
                    <div class="dash-box dash-box-color-1">
                        <div class="dash-box-icon">
                            <i class="fa fa-suitcase"></i>
                        </div>
                        <div class="dash-box-body">
                            <span class="dash-box-count">
                                Services Management
                            </span>
                            <div class="dash-btn">
                                <t t-if="widget.employee_data.access_service_manager">
                                    <button class="btn btn-info btn-xs general_services_requests_to_approve">
                                        Requests to Approve
                                    </button>
                                    <span class="btn btn-info btn-xs-num general_services_requests_to_approve">
                                        <t t-esc="widget.employee_data.general_services_requests_to_approve"/>
                                    </span>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </t>
</templates>