<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="loan_generate_payslip_amendment_view" model="ir.ui.view">
            <field name="name">loan.generate.payslip.amendment.view</field>
            <field name="model">loan.generate.payslip.amendment</field>
            <field name="arch" type="xml">
                <form string="Generate Payslip Amendment">
                    <group col="2" colspan="2">
                        <field name="hr_payroll_period_id"/>
                        <field name="amendment_status"
                               required="1"
                               string="Generated Amendment in Status"/>
                    </group>
                    <group>
                        <field name="remark" placeholder="Note"
                               nolabel="1" required="1"/>
                    </group>
                    <footer>
                        <button name="generate_amendment"
                                string="Generate Amendment"
                                type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default"
                                special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="act_open_generate_payslip_amendment">
            <field name="name">Generate Payslip Amendment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">loan.generate.payslip.amendment</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- TODO: check if we need this -->
        <record model="ir.values" id="loan_payslip_amendment_multi">
            <field name="model_id" ref="model_loan_installments" />
            <field name="name">Payslip Amendment</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('act_open_generate_payslip_amendment'))" />
            <field name="key">action</field>
            <field name="model">loan.installments</field>
        </record>

    </data>
</odoo>
