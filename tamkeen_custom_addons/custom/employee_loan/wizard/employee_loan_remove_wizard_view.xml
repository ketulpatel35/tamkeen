<odoo>
    <record id="employee_loan_remove_wizard_view" model="ir.ui.view">
        <field name="name">employee.loan.remove.wizard.view</field>
        <field name="model">employee.loan.remove.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Draft Amendment">
                <p class="oe_grey">
                    Are you sure you want to delete the employee loan?
                </p>
                <footer>
                    <button string="Delete"
                            name="remove_loan" type="object"
                            default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <act_window id="action_employee_loan_remove_wizard"
                multi="True"
                key2="client_action_multi" name="Delete My Own Request"
                res_model="employee.loan.remove.wizard"
                src_model="hr.employee.loan"
                view_mode="form" target="new" view_type="form"
                groups="employee_loan.group_loan_normal_user"/>
</odoo>