<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- Budget confirm to CEO Approval-->
        <record id="email_template_rfq_to_budget_approval"
                model="mail.template">
            <field name="name"> Approval of Purchase Order
            </field>
            <field name="model_id"
                   ref="purchase.model_purchase_order" />
            <field name="email_from">${object.company_id.prcrmnt_group_email | safe}</field>
            <field name="email_to">${object.company_id.budget_team_mail | safe}</field>
            <field name="email_cc"></field>
            <field name="subject">Purchase Order to be approval</field>
            <field name="body_html"><![CDATA[
<p>
Dear Budget team,
<br/>
<p style="padding-left: 4em;">
Kindly, approve the purchase order ${(object.name or '')|safe}.
<br/>
<br/>
<br/>
<b>Requester Name:</b> Procurement Team.
<br/>
<br/>
<b>Analytic Account :</b> ${object.requisition_id.account_analytic_id.name}
<br/>
<br/>
<b>Remark:</b> ${(object.remark or '')|safe}
</p>
% if ctx["display_link"]:
   To proceed, Kindly <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
% endif
<br/>
<p> Kind Regards </p>
<br/>
<p style="font-size:13px; color:blue; border: 1px solid red; width:350px;"> Auto generated message through the ERP System. </p>
			   ]]>
            </field>
        </record>


