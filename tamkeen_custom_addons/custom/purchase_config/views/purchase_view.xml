        <record model="ir.ui.view" id="purchase_order_required_payment">
            <field name="name">purchase.order.required.payment</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header/button[@name='action_rfq_send']" position="after">
                    <button name="bid_received" type="object" states="sent" string="Bid Received" class="oe_highlight" groups="purchase.group_purchase_user"/>
                    <button name="purchase_budget_confirm" type="object" states="bid" attrs="{'invisible': [('state','not in ', 'sent') ]}" string="Budget Confirm Order"
                            groups="purchase_config.group_budget_approval_po"
                            class="oe_highlight"/>
                    <!--<button name="picking_ok" states="except_picking" string="Manually Corrected"/>-->
                    <!--<button name="invoice_ok" states="except_invoice" string="Manually Corrected"/>-->
                    <!--<button name="action_view_invoice" string="Receive Invoice" type="object"-->
                            <!--attrs="{'invisible': [('state','!=', 'to approve') ]}"-->
                            <!--class="oe_highlight" groups="account.group_account_manager"/>-->
                    <!--statusbar_colors='{"except_picking":"red","except_invoice":"red","confirmed":"blue"}'-->
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name='set_to_draft' invisible='1'/>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="attributes">
                    <attribute name="required">True</attribute>
                </xpath>
                <field name="state" position="attributes">
                    <attribute name="statusbar_visible">draft,sent,bid,budget_confirmed,to approve,purchase</attribute>
                </field>
                <xpath expr="//button[@id='draft_confirm']" position="replace"/>

                <xpath expr="//button[@name='button_approve']" position="replace">
                     <button name="button_approve" type="object" states="to approve" string="Approve Order" class="oe_highlight" groups="purchase_config.group_ceo_approval_po"/>
                </xpath>

                <!-- Print RFQ (Draft state)-->
                <xpath expr="//button[@name='print_quotation']" position="attributes">
                    <attribute name="groups">purchase.group_purchase_user</attribute>
                </xpath>

                <xpath expr="//button[@id='bid_confirm']" position="attributes">
                    <attribute name="groups">purchase.group_purchase_manager</attribute>
                    <attribute name="states">budget_confirmed</attribute>
                </xpath>
                <xpath expr="//button[@name='action_rfq_send']" position="attributes">
                    <attribute name="groups">purchase.group_purchase_user</attribute>
                    <attribute name="attrs">{'invisible': [('state','not in','approved')]}</attribute>
                    <attribute name="string">Send PO by Email</attribute>
                </xpath>
                <button name="button_done" position="attributes">
                    <attribute name="groups">purchase.group_purchase_manager</attribute>
                </button>

                <button name="button_unlock" position="attributes">
                    <attribute name="groups">purchase.group_purchase_manager</attribute>
                </button>

                <!--<xpath expr="//button[@name='action_view_picking']" position="attributes">-->
                    <!--<attribute name="groups">purchase_config.group_receive_shipment_po</attribute>-->
                <!--</xpath>-->

                <!--<xpath expr="//button[@name='action_view_invoice']" position="attributes">-->
                    <!--<attribute name="attrs">{'invisible': [('state','!=', 'approved') ]}</attribute>-->
                    <!--<attribute name="groups">account.group_account_manager</attribute>-->
                <!--</xpath>-->

                <xpath expr="//button[@name='button_draft']" position="replace"/>
                <xpath expr="//button[@name='button_cancel']" position="before">
                    <button name="button_draft"
                            states="sent,bid,budget_confirmed,to approve,purchase" string="Set to Draft" type="object" groups="purchase.group_purchase_manager,purchase_config.group_budget_approval_po"/>
                </xpath>

                <!--<xpath expr="//button[@name='button_cancel']" position="attributes">-->
                    <!--<attribute name="states">confirmed,sent,bid,approved,budget_confirmed</attribute>-->
                    <!--&lt;!&ndash;<attribute name="states">draft,confirmed,sent,bid,approved,except_picking,except_invoice,budget_confirmed</attribute>&ndash;&gt;-->
                <!--</xpath>-->

                <xpath expr="//div[@class='oe_title']"
                       position="replace">
                    <group colspan="2" col="2" >
                        <group
                                attrs="{'invisible': ['|', ('state','not in',('purchase','done','cancel')), ('po_company_number', '=', False)]}">
                            <div class="oe_title">
                                <label string="Request for Quotation"
                                       attrs="{'invisible':[('state', 'in', ('cancel'))]}"/>
                                <label string="PO Company Number"
                                       attrs="{'invisible':[('state', 'not in', ('cancel'))]}"/>
                                <h1>
                                    <field name="po_company_number" readonly="1" />
                                </h1>
                            </div>
                        </group>
                        <group>
                            <div class="oe_title">
                                <label string="PO Company Number"
                                       attrs="{'invisible': ['|', ('state', 'not in', ('purchase', 'done'))]}"/>
                                <label string="Request for Quotation"
                                       attrs="{'invisible': ['|',('state', 'in', ('purchase')), '&amp;',('po_company_number', '!=', False), ('state', 'not in', ('cancel'))]}"/>
                                <h1>
                                    <field name="name" readonly="1"/>
                                </h1>
                            </div>
                        </group>
                    </group>
                </xpath>

                <field name="notes" position="replace"/>
                <xpath expr="//notebook" position="inside">
                    <page name="terms" string="Terms &amp; Conditions">
                        <group>
                            <field name="notes" attrs="{'readonly': [('state','not in',('draft','sent'))]}" nolabel="1"/>
                        </group>
                    </page>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page string="Approvals">
                        <div>
                            The approval/refusal information will be displayed here.
                        </div>
                        <group>
                            <!--<group attrs="{'invisible':[('budget_user_id','=',False)]}">-->
                                <!--<field name="budget_user_id" options="{'no_open': True,'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}" />-->
                                <!--<field name="budget_confirm_date"/>-->
                            <!--</group>-->
                            <!--<group attrs="{'invisible':[('ceo_user_id','=',False)]}">-->
                                <!--<field name="ceo_user_id" options="{'no_open': True,'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>-->
                                <!--<field name="ceo_approval_date"/>-->
                            <!--</group>-->
                            <!--<group attrs="{'invisible':[('po_confirm_user_id','=',False)]}">-->
                                <!--<field name="po_confirm_user_id" options="{'no_open': True,'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>-->
                                <!--<field name="po_confirm_date"/>-->
                            <!--</group>-->

                            <group>
                                <field name="budget_user_id" options="{'no_open': True,'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}" />
                                <field name="budget_confirm_date"/>
                            </group>
                            <group>
                                <field name="ceo_user_id" options="{'no_open': True,'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                                <field name="ceo_approval_date"/>
                            </group>
                            <group>
                                <field name="po_confirm_user_id" options="{'no_open': True,'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                                <field name="po_confirm_date"/>
                            </group>
                        </group>
                        <group>
                           <group attrs="{'invisible':[('cancel_by','=',False)]}">
                                <field name="cancel_by"
                                       options="{'no_open': True,'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                                <field name="cancel_date"/>
                            </group>
                            <group attrs="{'invisible':[('returned_by','=',False)]}">
                                <field name="returned_by" options="{'no_open': True,'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                                <field name="return_date"/>
                            </group>
                        </group>
                    </page>
                </xpath>

                <div name="button_box" position="replace">
                    <div class="oe_button_box" name="button_box">
                        <button type="object"
                                name="action_view_picking"
                                class="oe_stat_button"
                                icon="fa-truck"
                                attrs="{'invisible':['|', ('is_shipped','=',True), ('state','!=', 'purchase')]}"
                                groups="purchase_config.group_receive_shipment_po">
                            <field name="picking_count" widget="statinfo" string="Shipment" help="Incoming Shipments"/>
                            <field name="picking_ids" invisible="1"/>
                        </button>
                        <button type="object"  name="action_view_invoice"
                                class="oe_stat_button"
                                icon="fa-pencil-square-o"
                                attrs="{'invisible':[('state', 'in', ('draft','sent','to approve','budget_confirmed','cancel')),('invoice_ids','=',[])]}"
                                groups="purchase_config.group_receive_invoice_po">
                            <field name="invoice_count" widget="statinfo" string="Vendor Bills"/>
                            <field name='invoice_ids' invisible="1"/>
                        </button>
                    </div>
                </div>
            </field>
        </record>

        <record model="ir.ui.menu" id="purchase.menu_purchase_control">
            <field name="groups_id" eval="[(4,ref('group_receive_shipment_po')),(4,ref('group_receive_invoice_po'))]" />
        </record>

        <record model="ir.ui.menu" id="purchase.menu_action_picking_tree_in_move">
            <field name="groups_id" eval="[(6,0,[ref('purchase_config.group_receive_shipment_po')])]" />
        </record>

        <record model="ir.ui.menu" id="purchase.menu_procurement_management_pending_invoice">
            <field name="groups_id" eval="[(6,0,[ref('purchase_config.group_receive_invoice_po')])]" />
        </record>

        <record id="invoice_supplier_form_inherit_for_account_receive_invoice" model="ir.ui.view">
            <field name="name">invoice.supplier.form.inherit.for.account.receive.invoice</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']//field[@name='account_id']" position="attributes">
                    <attribute name="groups">purchase_config.group_receive_invoice_po,account.group_account_invoice</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
