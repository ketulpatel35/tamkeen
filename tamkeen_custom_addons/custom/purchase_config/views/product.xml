<?xml version="1.0"?>
<odoo>
    <!-- Mail template is done in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="1">
        <!--Mail template level 0-->
        <record id="email_template_product_creation" model="mail.template">
            <field name="name">Product Creation</field>
            <field name="email_from">${object.company_id.email|safe}</field>
            <field name="subject">Product Creation</field>
            <field name="partner_to">${object.company_id.id | safe}</field>
            <field name="lang">${object.lang}</field>
            <field name="use_default_to">False</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="xml">
                <p>Dear,</p>
                <p>The product:${object.name}  has been created, please review it.</p>


            </field>
        </record>

        <record id="action_email_prodct_creation" model="ir.actions.server">
            <field name="name">Product Creation</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="type">ir.actions.server</field>
            <field name="condition">True</field>
            <field name="state">email</field>
            <field name="template_id" ref="email_template_product_creation"/>
        </record>

        <record id="automated_action_email_prodct_creation" model="base.action.rule">
            <field name="name">Product Creation</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="kind">on_create</field>
            <field name="server_action_ids" eval="[(6,0,[ref('action_email_prodct_creation')])]"/>
        </record>

    </data>

</odoo>
