<?xml version="1.0" encoding='UTF-8'?>
<openerp>
    <data>
        <record id="approval_reminder_cron_email_template"
                model="mail.template">
            <field name="name">General Services Reminder</field>
            <!-- <field name="email_from">erp@company.com</field>  -->
            <field name="subject">Approval Reminder</field>
            <field name="email_to">${ctx["email_to"] |safe}</field>
            <field name="model_id" ref="service_management.model_service_request" />
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
<br>
Please take a moment to approve the pending ${(object.service_provider or '')|safe} service request.
<br>
Employee Name: ${object.employee_id.name}
<br>
Service Category: ${object.service_category_id.name}
<br>
Service: ${object.service_type_id.name}
<br>
% if ctx["display_link"]:   
   To proceed, Kindly <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
% endif
<br />
<p> Kind Regards </p>
<br />
<p style="font-size:13px; color:blue; border: 1px solid red; width:350px;"> Auto generated message through the ERP System. </p>
            ]]></field>
        </record>

        <!-- Cron -->
        <record model="ir.cron" id="general_services_approval_reminder_cron">
            <field name="name">General Services Approval Reminder</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model" eval="'service.request'"/>
            <field name="function" eval="'send_reminder'"/>
            <field name="args" eval="'()'" />
        </record>

    </data>
</openerp>