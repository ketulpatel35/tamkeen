        <!-- Manager -->
        <record id="service_mngr_email_tmplt" model="mail.template">
            <field name="name">Service Approval Template (Manager)</field>
            <field name="model_id"
                   ref="service_management.model_service_request"/>
            <field name="email_from">${user.email |safe}</field>
            <field name="email_to">
                ${object.employee_id.service_manager_id.work_email |safe}
            </field>
            <!-- <field name="email_cc"></field> -->
            <field name="subject">Service Request To Be Approved</field>
            <field name="body_html"><![CDATA[
<p>
Dear ${object.employee_id.service_manager_id.name},
<br/>
<p style="padding-left: 4em;">
Kindly, approve the pending ${(object.service_provider or '')|safe} service request.
<br/>
Employee Name: ${object.employee_id.name}
<br/>
Service Category: ${object.service_category_id.name}
<br/>
Service: ${object.service_type_id.name}
<br/>
</p>
</p>
% if ctx["display_link"]:
   To proceed, Kindly <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
% endif
<br/>
<p> Kind Regards </p>
<br/>
<p style="font-size:13px; color:blue; border: 1px solid red; width:350px;"> Auto generated message through the ERP System. </p>

			   ]]>

            </field>
