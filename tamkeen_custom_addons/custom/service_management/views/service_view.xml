            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new request. 
              </p><p>
                Press create button to apply for your hr services, The system will take care from the approval.
              </p>
            </field>
        </record>

        <record id="action_request_rcrtmnt_services" model="ir.actions.act_window">
            <field name="name">Recruitment Services</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">service.request</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">['|',('service_type_id.oe_approval','=',True),('service_type_id.ta_approval','=',True)]</field>
            <field name="context">{'search_default_pending_recrtmnt_approvals':1,'default_service_provider': 'recruitment'}</field>
            <field name="filter" eval="True"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new request.
              </p><p>
                Press create button to apply for any recruitment service, The system will take care from the approval.
              </p>
            </field>
        </record>

        <record id="action_request_administration_services" model="ir.actions.act_window">
            <field name="name">Administration Services</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">service.request</field>
