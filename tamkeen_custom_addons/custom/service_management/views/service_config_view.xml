<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="service_displayed_states_form" model="ir.ui.view">
            <field name="name">service.displayed.states.form</field>
            <field name="model">service.displayed.states</field>
            <field name="arch" type="xml">
                <form string="Stages">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="case_default"/>
                            <field name="wkf_state"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_service_displayed_states_tree" model="ir.ui.view">
            <field name="name">service.displayed.states</field>
            <field name="model">service.displayed.states</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Stages">
                    <field name="name"/>
                    <field name="wkf_state"/>
                    <field name="sequence"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window"
                id="act_open_service_displayed_states_view">
            <field name="name">Stages</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">service.displayed.states</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new stage.
                </p>
                <p>
                    Press create button to create a new stage.
                </p>
            </field>
        </record>


        <!--  -->
        <record id="view_service_category_form" model="ir.ui.view">
            <field name="name">service.category.form</field>
            <field name="model">service.category</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Service Category">
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="name" colspan="2"/>
                            <field name="service_provider" colspan="2"/>
                            <field name="display_sequence" colspan="2"/>
                            <field name="code" colspan="2"/>
                            <field name="active" colspan="2"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"
                               widget="mail_followers"
                               groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_service_category_tree" model="ir.ui.view">
            <field name="name">service.category.tree</field>
            <field name="model">service.category</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Service Category">
                    <field name="name"/>
                    <field name="service_provider"/>
                    <field name="display_sequence"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window"
                id="act_open_service_category_view">
            <field name="name">Provided Services Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">service.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new service category.
                </p>
                <p>
                    Press create button to create a new service category.
                </p>
            </field>
        </record>
        <!--  -->
        <record id="view_service_types_tree" model="ir.ui.view">
            <field name="name">service.type.tree</field>
            <field name="model">service.type</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Request Types">
                    <field name="name"/>
                    <field name="service_provider"/>
                    <field name="service_category_id"/>
                    <field name="sla_period"/>
                    <field name="sla_period_unit"/>
                    <field name="display_sequence"/>
                </tree>
            </field>
        </record>
        <record id="view_service_types_form" model="ir.ui.view">
            <field name="name">service.type.form</field>
            <field name="model">service.type</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Service Type">
                    <!--<sheet>-->
                        <group>
                            <field name="name"/>
                            <field name="about_service" widget="html"/>
                            <field name="states_to_display_ids"
                                   widget="many2many_tags"/>
                        </group>
                        <group>
                            <group>
                                <separator string="Service Category/SLA"/>
                                <br/>
                                <field name="service_provider" colspan="2"/>
                                <field name="service_category_id" colspan="2"/>
                                <field name="sla_period"/>
                                <field name="sla_period_unit"
                                       attrs="{'required': [('sla_period','!=', 0)]}"/>
                            </group>
                            <group>
                                <separator string="Approvals"/><br/>
                                <field name="mngr_approval"/>
                                <field name="vp_approval"/>
                                <field name="administration_approval"/>
                                <field name="administration_email"/>
                                <field name="oe_approval"/>
                                <field name="ta_approval"/>
                                <field name="hr_approval"/>
                                <field name="hr_email"/>
                                <field name="finance_approval"/>
                                <field name="procurement_approval"/>
                                <field name="ss_vp_approval"/>
                                <field name="ceo_approval"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Controllers">
                                <group string="Restrictions">
                                    <group>
                                        <field name="employee_role"
                                               colspan="2"/>
                                        <field name="group_id" colspan="2"/>
                                    </group>
                                    <group>
                                        <field name="gender" colspan="2"/>
                                    </group>
                                    <group>
                                        <field name="nationality" colspan="2"/>
                                    </group>
                                </group>
                                <separator string="Controllers"/>
                                <group colspan="6" col="6">
                                    <group col="2" colspan="2">
                                        <label for="attachment_mandatory" string="Attachment Mandatory"/>
                                        <div name="attachment_mandatory">
                                                <label for="attachment_mandatory_male" string="for Male"/>
                                                <field name="attachment_mandatory_male"
                                               attrs="{'readonly':[('gender','=','female')]}"/>
                                            <label for="attachment_mandatory_female" string="for Female"/>
                                                <field name="attachment_mandatory_female"
                                               string="for Female"
                                               attrs="{'readonly':[('gender','=','male')]}"/>
                                        </div>
                                        <field name="priority_required"/>
                                        <field name="details_required"/>
                                        <field name="job_position_required"/>
                                        <field name="file_to_fill"/>
                                    </group>
                                    <group col="2" colspan="2">
                                        <field name="quantity_required"/>
                                        <field name="request_max_quantity"
                                               attrs="{'invisible': [('quantity_required','=', False)]}"/>
                                        <field name="completion_date_required"/>
                                        <field name="ar_destination_required"/>
                                        <field name="en_destination_required"/>
                                        <field name="date_from_required"/>
                                        <field name="date_to_required"/>
                                    </group>
                                    <group col="2" colspan="2">
                                        <field name="approval_reminder_line"/>
                                        <field name="display_sequence"/>
                                        <field name="active"/>
                                        <field name="departure_from_required"/>
                                        <field name="destination_required"/>
                                        <field name="flight_option_required"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Endorsement">
                                <group>
                                    <field name="endorsement_required"/>
                                    <field name="endorsement_text"
                                           widget="html"
                                           attrs="{'invisible': [('endorsement_required','=', False)],'required': [('endorsement_required','=', True)]}"/>
                                </group>
                            </page>
                        </notebook>
                        <div class="oe_chatter">
                            <field name="message_follower_ids"
                                   widget="mail_followers"
                                   groups="base.group_user"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    <!--</sheet>-->
                </form>
            </field>
        </record>

        <record id="view_service_types_search" model="ir.ui.view">
            <field name="name">service.type.search</field>
            <field name="model">service.type</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Service Type">
                    <field name="name"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Service Category" domain="[]"
                                context="{'group_by':'service_category_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_service_types_view">
            <field name="name">Provided Services</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">service.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_service_types_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new service type.
                </p>
                <p>
                    Press create button to create a new service type.
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window.view"
                id="act_open_service_types_view_form">
            <field name="act_window_id" ref="act_open_service_types_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_service_types_form"/>
        </record>
        <record model="ir.actions.act_window.view"
                id="act_open_service_types_view_tree">
            <field name="act_window_id" ref="act_open_service_types_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_service_types_tree"/>
        </record>
    </data>
</odoo>