<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

	<record id="view_service_employee_form" model="ir.ui.view">
			<field name="name">General Services Approval</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="hr_employee_approval_tab.employee_approval_delegation_view_form" />
			<field name="arch" type="xml">
                <xpath expr='//page[@name="approval_delegation"]/group'
					   position="inside">
                    <group string="General Services">
                        <field name="service_manager_id" colspan="2"
							   required="1" options="{'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                        <field name="service_vp_id" colspan="2" required="1" options="{'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                        <field name="service_ceo_id" colspan="2"
							   required="1" options="{'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                    </group>
            	</xpath>
			</field>
		</record>

	</data>
</odoo>
