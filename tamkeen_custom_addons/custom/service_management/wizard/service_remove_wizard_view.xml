<odoo>
    <record id="service_remove_wizard_view" model="ir.ui.view">
        <field name="name">service.remove.wizard.view</field>
        <field name="model">service.remove.wizard</field>
        <field name="arch" type="xml">
            <form string="Remove Service Request">
                <p class="oe_grey">
                    Are you sure you want to delete the service request?
                </p>
                <footer>
                    <button string="Delete"
                            name="remove_service" type="object"
                            default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <act_window id="action_service_remove_wizard"
                multi="True"
                key2="client_action_multi" name="Delete My Own Request"
                res_model="service.remove.wizard"
                src_model="service.request"
                view_mode="form" target="new" view_type="form"
                groups="service_management.group_service_user"/>
</odoo>