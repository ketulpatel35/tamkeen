<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Customer Payments -->
        <record id="view_account_payment_form_inherit7" model="ir.ui.view">
            <field name="name">view_account_payment_form_inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='post']" position="before">
                    <button name="submit_to_first_approval" states="draft" string="First Validate"
                            class="oe_highlight" type="object"
                            groups="account.group_account_manager"/>
                    <button name="action_refuse" states="draft" string="Refuse" type="object" groups="account.group_account_manager"/>
                    <button name="action_cancel_draft" states="refused,first_approval" string="Set to Draft" type="object"
                            groups="voucher_workflow_customization.group_account_fi_director"/>
                </xpath>

                <xpath expr="//button[@name='post']" position="replace">
                    <button name="post" class="oe_highlight" states="first_approval" string="Confirm" type="object"
                            groups="voucher_workflow_customization.group_account_fi_director"/>
                </xpath>

            </field>
        </record>
    </data>
</openerp>
