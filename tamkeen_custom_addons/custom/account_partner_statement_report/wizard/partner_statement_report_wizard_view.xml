<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="wizard_partner_statement_form_view" model="ir.ui.view">
            <field name="name">wizard.account.partner.statement.form.view</field>
            <field name="model">wizard.account.partner.statement</field>
            <field name="arch" type="xml">
                <form string="Account Partner Statement">
                    <group>
                        <group>
                            <field name="start_date" required="1"/>
                            <field name="statement_type" required="1"/>
                            <field name="partner_id" required="1"/>
                        </group>
                        <group>
                            <field name="end_date" required="1"/>
                            <field name="invoice_type" required="1"/>
                            <field name="include_analytic_account"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_xls_report" string="Print XLS Report" 
                                type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_partner_statement" model="ir.actions.act_window">
            <field name="name">Partner Statement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.account.partner.statement</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_partner_statement_form_view"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_partner_statement" name="Partner Statement"
                  action="action_view_partner_statement"
                  parent="account.menu_finance_legal_statement" sequence="11"/>
    </data>

</odoo>