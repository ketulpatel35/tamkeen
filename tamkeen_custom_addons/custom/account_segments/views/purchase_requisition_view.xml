<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="view_purchase_requisition_form_inherit" model="ir.ui.view">
            <field name="name">purchase.requisition.form.inherit</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_analytic_id']" position="after">
                    <field name="cost_centre_id" readonly="1"
                           options="{'no_open': True,'no_create': True,'no_quick_create': True,'no_create_edit': True}"/>
                </xpath>

                <xpath expr="//field[@name='line_ids']" position="attributes">
                    <attribute name="context">
                        {'line_ids':line_ids, 'cost_centre_id':cost_centre_id}
                    </attribute>
                </xpath>

                <!-- hide analytic account line level-->
                <xpath expr="//field[@name='line_ids']/tree/field[@name='account_analytic_id']"
                       position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="view_purchase_requisition_form_inherit_segment"
                model="ir.ui.view">
            <field name="name">purchase.requisition.form.inherit.segment</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('account_segments.acc_seg_line_level') ])]" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']/tree/field[@name='product_id']" position="after">
                    <field name="cost_centre_id" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='account_analytic_id']"
                       position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
