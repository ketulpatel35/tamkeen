        <!-- Analytic Account should be Cost center -->
        <record
                id="purchase_requisition_config.email_template_pr_update_manager" model="mail.template">
            <field name="name">Approval of Purchase Requisition
            </field>
            <field name="model_id"
                   ref="purchase_requisition.model_purchase_requisition" />
            <field name="email_from">${user.email | safe}</field>
            <field name="email_to">${object.employee_ids.pr_manager_id.work_email |safe}</field>
            <field name="email_cc">
            </field>
            <field name="subject">Purchase Requisition To Be Approved.
                : ${object.name} </field>
            <field name="body_html"><![CDATA[
<p>
Dear ${(object.employee_ids.pr_manager_id.name or '')|safe},
<br/>
<p style="padding-left: 4em;">
Kindly, approve the procurement ${(object.name or '')|safe}.
<br/>
<br/>
<b>Requester Name:</b> ${object.employee_ids.name}
<br/>
<br/>
% if object.cost_centre_id:
    <b>Cost Center :</b> ${object.cost_centre_id.name + '[' + object.cost_centre_id.code +']' or ''}
    <br/>
    <br/>
% endif
<b>Remark:</b> ${(object.remark or '')|safe}
</p>
<br/>
</p>
% if ctx["display_link"]:
   To proceed, Kindly <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
% endif
<br/>
<p> Kind Regards </p>
<br/>
<p style="font-size:13px; color:blue; border: 1px solid red; width:350px;"> Auto generated message through the ERP System. </p>
			   ]]>
            </field>
        </record>

