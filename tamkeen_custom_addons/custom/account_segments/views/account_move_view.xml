<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit search view -->
        <record id="view_account_move_filter_account_segment"
                model="ir.ui.view">
            <field name="name">view.account.move.filter.account.segment</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_move_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="line_ids" string="Cost Center"
                           filter_domain="['|',('line_ids.cost_centre_id.name','ilike',self),('line_ids.cost_centre_id.code','ilike',self)]"
                    />
                </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="view_move_form_inherit_seg_header" model="ir.ui.view">
            <field name="name">view.move.seg.header</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="cost_centre_id" invisible="1" readonly="1"
                           groups="account.group_account_manager,account.group_account_user"/>
                </xpath>
            </field>
        </record>

        <record id="view_move_form_seg_line" model="ir.ui.view">
            <field name="name">view.move.form.seg.line</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('account_segments.acc_seg_line_level') ])]" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']/tree/field[@name='name']" position="after">
                    <field name="cost_centre_id" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_move_line_product" model="ir.ui.view">
            <field name="name">view.move.line.product</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']/tree/field[@name='partner_id']" position="after">
                    <field name="product_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_move_line_tree_product" model="ir.ui.view">
            <field name="name">view.move.line.tree.product</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="product_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_move_line_form_product" model="ir.ui.view">
            <field name="name">view.move.line.tree.product</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="product_id"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
