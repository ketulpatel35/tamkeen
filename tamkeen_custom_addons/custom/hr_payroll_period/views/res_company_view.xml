<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- res.company form view -->
        <record model="ir.ui.view" id="view_company_inherit_for_register">
            <field name="name">res.company.mol.form.inherit.fir.register</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="model">res.company</field>
            <field name="arch" type="xml">
                <xpath expr="//page[1]" position="after">
                    <page string="Payroll Configuration" name="payroll_config">
                        <group col="4" colspan="4">
                            <field name="payroll_journal_id"/>
                            <field name="payroll_lock_day"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
