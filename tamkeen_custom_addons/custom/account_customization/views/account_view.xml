<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="account_view_list_inherit_for_name_arabic">
        <field name="name">account.view.list.inherit.for.name.field</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_list" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="name_arabic" required="True"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="account_view_form_inherit_for_name_arabic">
        <field name="name">account.view.form.inherit.for.name.arabic</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                - <field name="name_arabic" class="oe_inline" placeholder="الاسم بالعربية" style="width: 6em" required="True"/>
            </xpath>
            <field name="user_type_id" position="after">
                <field name="internal_type_id"/>
                <field name="category_id"/>
            </field>
        </field>
    </record>

    <record id="view_account_analytic_account_form_for_category"
            model="ir.ui.view">
        <field name="name">account.analytic.account.form</field>
        <field name="model">account.analytic.account</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="category_id"/>
            </field>
        </field>
    </record>


