<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_account_payment_form_inherit_for_add_payment" model="ir.ui.view">
        <field name="name">view.account.payment.form.inherit.for.add.payment</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="payment"/>
                <field name="cheque_number" attrs="{'invisible': [('payment','!=','cheque')],'required':[('payment','=','cheque')]}"/>
                <field name="transaction_type"/>
                <field name="advance_account_id" attrs="{'readonly': [('state','!=','draft')]}"/>
            </xpath>
            <xpath expr="//field[@name='payment_date']" position="after">
                <field name="reference" readonly="1"/>
            </xpath>
            <xpath expr="//sheet/group[1]" position="after">
                <group>
                    <field name="note"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>