<odoo>
    <record id="view_service_category_form_inherit_for_leave"
            model="ir.ui.view">
        <field name="name">view.service.category.form.inherit.for.leave</field>
        <field name="model">service.category</field>
        <field name="inherit_id" ref="service_management.view_service_category_form"/>
        <field name="arch" type="xml">
            <field name="active" position="before">
                <field name="linked_with_leave"/>
            </field>
        </field>
    </record>
    <record id="view_service_request_form_inherit_for_leave"
            model="ir.ui.view">
        <field name="name">view.service.request.form.inherit.for.leave</field>
        <field name="model">service.request</field>
        <field name="inherit_id" ref="service_management.view_service_request_form"/>
        <field name="arch" type="xml">
            <field name="service_category_id" position="attributes">
                <attribute name="context">{'leave': context.get('leave')}</attribute>
            </field>
        </field>
    </record>
</odoo>