<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
    
        <record id="view_gradelevel_form" model="ir.ui.view">
            <field name="name">grade.level.form</field>
            <field name="model">grade.level</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Grade">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="name" select="1" required="1"/>
                            <field name="code" required="1"/>
                            <field name="wage" required="1"/>
                            <field name="minimum_value" required="1"/>
                            <field name="maximum_value" required="1"/>
                            <field name="active"/>
                        </group>
                        <group colspan="4" col="4">
                            <field name="maximum_allowed_annual_balance"/>
                            <field name="maximum_accumulative_balance"/>
                            <field name="trial_period"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_gradelevel_tree" model="ir.ui.view">
            <field name="name">grade.level.tree</field>
            <field name="model">grade.level</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Grade">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="minimum_value"/>
                    <field name="maximum_value"/>
                    <field name="wage"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_gradelevel">
            <field name="name">Grade Level</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">grade.level</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem action="action_gradelevel" id="menu_gradelevel"
                  parent="hr_contract_init.hr_contracts_configuration" sequence="6" />
        
        <record model="ir.actions.act_window.view" id="act_view_gradelevel_form">
            <field name="act_window_id" ref="action_gradelevel" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_gradelevel_form" />
        </record>
        
        <record model="ir.actions.act_window.view" id="act_view_gradelevel_tree">
            <field name="act_window_id" ref="action_gradelevel" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_gradelevel_tree" />
        </record>

        <record id="contract_view_grede_level_form" model="ir.ui.view">
            <field name="name">hr.contract.view.form.contract_init</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
            <field name="arch" type="xml">
                <field name="job_id" position="after">
                    <field name="grade_level" attrs="{'readonly': [('state','in',('close'))]}"/>
                </field>
                <!-- == need dependency for hr_contract_state == -->
                <!--<field name="wage" position="replace">-->
                    <!--<field name="wage" required="1"/>-->
                <!--</field>-->
            </field>
        </record>
        
    </data>
</odoo>
