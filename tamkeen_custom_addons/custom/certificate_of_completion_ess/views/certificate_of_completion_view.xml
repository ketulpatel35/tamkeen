<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- coc actions for normal user create -->
    <record model="ir.actions.act_window"
            id="certificate_of_completion_action_normal_user">
        <field name="name">Certificate of Completion</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">certificate.of.completion</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_is_manual_coc':True}</field>
        <field name="domain">[('employee_id.user_id.id','=',uid)]</field>
        <field name="view_id"
               ref="certificate_of_completion.certificate_of_completion_tree_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Generate the Certificate of Completion.
            </p>
        </field>
    </record>

    <record id="act_coc_normal_user_tree_view"
            model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id"
               ref="certificate_of_completion.certificate_of_completion_tree_view"/>
        <field name="act_window_id" ref="certificate_of_completion_action_normal_user"/>
    </record>

    <record id="act_coc_normal_user_form_view"
            model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id"
               ref="certificate_of_completion.certificate_of_completion_form_view"/>
        <field name="act_window_id" ref="certificate_of_completion_action_normal_user"/>
    </record>

    <!-- coc actions to approve -->
    <record model="ir.actions.act_window"
            id="certificate_of_completion_action_approval_user">
        <field name="name">Certificate of Completion to Approve</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">certificate.of.completion</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state','in',['mngr_approval',
            'vp_approval', 'ceo_approval'])]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Generate the Certificate of Completion.
            </p>
        </field>
    </record>

</odoo>