<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_additional_employee_role_form" model="ir.ui.view">
            <field name="name">Employee Role</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="employee_role" colspan="2" required="1"/>
                </field>
                <field name="parent_id" position="attributes">
                    <attribute name="attrs">{'required':
                        [('employee_role', '!=', 'ceo')]}</attribute>
                </field>
            </field>
        </record>
        <record id="search_view_employee_role" model="ir.ui.view">
            <field name="name">Employee Role</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter" />
            <field name="arch" type="xml">
                <xpath expr="//group" position="inside">
                    <filter string="Role" icon="terp-personal" domain="[]" context="{'group_by':'employee_role'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
