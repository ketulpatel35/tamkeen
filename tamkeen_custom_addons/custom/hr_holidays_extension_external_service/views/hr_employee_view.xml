<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view"
            id="hr_employee_form_inherit_for_external_user">
        <field name="name">hr.employee.form.inherit.for.external.user</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id"
               ref="hr_holidays_extension.hr_employee_form_inherit_for_deligation_leave"/>
        <field name="arch" type="xml">
            <field name="leave_ceo_id" position="after">
                <field name="external_service_manager" required="1" options="{'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view"
            id="hr_employee_form_inherit_for_external_employee">
        <field name="name">hr.employee.form.inherit.for.external.employee</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id"
               ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <field name="calendar_id" position="after">
                <field name="outside_employee" />
            </field>
        </field>
    </record>
</odoo>