<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="review_journal_log_form" model="ir.ui.view">
        <field name="name">review.journal.log.form</field>
        <field name="model">review.journal.log</field>
        <field name="arch" type="xml">
            <form string="Review Logs">
                <label string="You are marking selected logs as reviewed. Are you sure you want to confirm?"/>
                <footer>
                    <button string="Confirm" name="review_log" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window
        id="action_review_journal_logs"
        name="Reviewed"
        res_model="review.journal.log"
        src_model="account.move.log"
        view_mode="form"
        multi="True"
        target="new"
        key2="client_action_multi"
    />

</odoo>