<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">
        <record model="ir.module.category" id="group_bp_management">
            <field name="name">Benefits Program Management</field>
            <field name="sequence">20</field>
        </record>
         <record id="group_bp_normal_user" model="res.groups">
            <field name="name">Normal User</field>
            <field name="category_id" ref="group_bp_management"/>
        </record>
        <record id="group_bp_view_all" model="res.groups">
            <field name="name">View All Benefits Program Requests</field>
            <field name="category_id" ref="group_bp_management"/>
        </record>
        <record id="group_bp_manager_approval" model="res.groups">
            <field name="name">Manager Approval</field>
            <field name="implied_ids" eval="[(4, ref('group_bp_normal_user'))]"/>
            <field name="category_id" ref="group_bp_management"/>
        </record>
        <record id="group_bp_vp_approval" model="res.groups">
            <field name="name">VP Approval</field>
            <field name="implied_ids" eval="[(4, ref('group_bp_normal_user'))]"/>
            <field name="category_id" ref="group_bp_management"/>
        </record>
        <record id="group_bp_ceo_approval" model="res.groups">
            <field name="name">CEO Approval</field>
            <field name="implied_ids" eval="[(4, ref('group_bp_normal_user'))]"/>
            <field name="category_id" ref="group_bp_management"/>
        </record>
        <record id="group_bp_hr_approval" model="res.groups">
            <field name="name">HR Approval</field>
            <field name="category_id" ref="group_bp_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_bp_normal_user'))]"/>
        </record>
        <!-- Finance Process -->
        <record id="group_bp_finance_approval" model="res.groups">
            <field name="name">Finance Processing/Approval</field>
            <field name="category_id" ref="group_bp_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_bp_normal_user'))]"/>
        </record>
         <record id="group_bp_on_behalf_of_other" model="res.groups">
            <field name="name">Can Request on Behalf of Others</field>
            <field name="implied_ids" eval="[(4, ref('group_bp_normal_user'))]"/>
            <field name="category_id" ref="group_bp_management"/>
        </record>
