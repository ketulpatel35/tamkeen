            <!--<field name="name">Reject Benefits Program Requests</field>-->
            <!--<field name="implied_ids" eval="[(4, ref('group_bp_normal_user'))]"/>-->
            <!--<field name="category_id" ref="group_bp_management"/>-->
        <!--</record>-->
        <record id="group_bp_locked_unlocked" model="res.groups">
            <field name="name">Lock/Unlock Benefits Program Requests</field>
            <field name="category_id" ref="group_bp_management"/>
            <field name="implied_ids" eval="[(4, ref('group_bp_normal_user'))]"/>
        </record>
        <record id="group_bp_configuration" model="res.groups">
            <field name="name">Benefits Program Configuration</field>
            <field name="category_id" ref="group_bp_management"/>
            <field name="implied_ids" eval="[(4, ref('group_bp_normal_user'))]"/>
        </record>
        <record id="group_bp_self_approval_service" model="res.groups">
            <field name="name">Can Approve/Refuse His/Her Benefits Program
                Requests</field>
            <field name="implied_ids" eval="[(4, ref('group_bp_normal_user'))]"/>
            <field name="category_id" ref="group_bp_management"/>
        </record>

    </data>
</odoo>