<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view"
            id="hr_employee_form_for_delegation_benefits_program">
        <field name="name">hr.employee.for.delegation.benefits.program</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id"
               ref="hr_employee_approval_tab.employee_approval_delegation_view_form"/>
        <field name="arch" type="xml">
            <xpath expr='//page[@name="approval_delegation"]/group'
                   position="inside">
                <group string="Benefits Program">
                    <field name="bp_manager_id" colspan="2" required="1" options="{'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                    <field name="bp_vp_id" colspan="2" required="1" options="{'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                    <field name="bp_ceo_id" colspan="2" required="1" options="{'no_create': True,'no_quick_create': True,'no_create_edit': True, 'limit':1000}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view"
            id="hr_contract_employee_view_form_benefits_program">
        <field name="name">hr.contract.employee.view.form.benefits.program</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id"
               ref="hr_contract.hr_hr_employee_view_form2"/>
        <field name="arch" type="xml">
            <field name="children" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="children" position="after">
                <field name="children_age_5_18" readonly="1"/>
            </field>
        </field>
    </record>

</odoo>