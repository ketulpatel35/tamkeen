<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Benefit Program in Company -->
    <record model="ir.ui.view"
            id="res_company_add_benefit_program_policy">
        <field name="name">res.company.add.benefit.program.policy</field>
        <field name="inherit_id"
               ref="service_configuration_panel.view_company_inherit_for_service_panel"/>
        <field name="model">res.company</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='policies']"
                   position="inside">
                <group string="Benefits Program Policy">
                    <field name="benefits_program_policy_id"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- service configuration panel for benefits program -->
    <record model="ir.ui.view"
            id="service_configuration_panel_for_benefits_program">
        <field name="name">service.configuration.panel.for.benefits.program
        </field>
        <field name="model">service.configuration.panel</field>
        <field name="inherit_id"
               ref="service_configuration_panel.service_configuration_panel_form"/>
        <field name="arch" type="xml">
            <field name="valid_to_date" position="after">
                <field name="is_benefits_program" invisible="1"/>
            </field>
            <xpath expr="//form/sheet/group[2]" position="after">
                <group
                        attrs="{'invisible': [('is_benefits_program', '=', False)]}">
                    <group>
                        <field name="is_display_dependents"
                               attrs="{'invisible': [('is_benefits_program', '=', False)]}"/>
                        <field name="allow_maximum_dependents"
                               attrs="{'invisible': [('is_display_dependents', '=', False)]}"/>
                        <label for="age"
                               string="Allow Children Age"/>
                        <div class="o_address_format" name="age">
                            <label for="allow_min_age"
                                   string="From" class="oe_inline"/>
                            <field name="allow_min_age" placeholder="From"
                                   class="oe_inline"/>
                            <br/>
                            <label for="allow_max_age"
                                   string="To" class="oe_inline"/>
                            <field name="allow_max_age" placeholder="To"
                                   class="oe_inline"/>
                        </div>
                    </group>
                    <group>
                        <field name="is_display_sub_benefits"
                               attrs="{'invisible': [('is_benefits_program', '=', False)]}"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Calculation" name="calculation"
                      attrs="{'invisible': [('is_benefits_program', '=', False)]}">
                    <field name="bp_calculation_config_ids"
                           attrs="{'invisible': [('is_benefits_program', '=', False)]}">
                        <tree string="Benefits Program calculation"
                              editable="bottom">
                            <field name="service_configuration_panel_id"
                                   invisible="1"/>
                            <field name="name"/>
                            <field name="grade_level_ids"
                                   options="{'no_open': True,'no_create': True,'no_quick_create': True,'no_create_edit': True}"
                                   widget="many2many_tags"/>
                            <field name="computation_rule"
                                   options="{'no_open': True,'no_create': True,'no_quick_create': True,'no_create_edit': True}"/>
                            <field name="remarks"/>
                        </tree>
                    </field>
                </page>
                <page string="Sub Benefits" name="sub_benefits"
                      attrs="{'invisible': ['|', ('is_benefits_program', '=', False), ('is_display_sub_benefits', '=', False)]}">
                    <field name="bp_sub_benefits_ids"
                           attrs="{'invisible': ['|', ('is_benefits_program', '=', False), ('is_display_sub_benefits', '=', False)]}"/>
                </page>
                <!-- Accounting tab -->
                <page string="Accounting Information"
                      name="accounting_information"
                      attrs="{'invisible': [('is_benefits_program', '=', False)]}">
                    <group>
                        <group>
                            <field name="product_id"
                                   domain="[('can_be_expensed', '=', True)]"
                                   options="{'no_open': True,'no_create': True,'no_quick_create': True,'no_create_edit': True}"
                                   attrs="{'required':[('is_benefits_program', '!=', False)], 'invisible': [('is_benefits_program', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="journal_id"
                                   options="{'no_open': True,'no_create': True,'no_quick_create': True,'no_create_edit': True}"
                                   attrs="{'required':[('is_benefits_program', '!=', False)], 'invisible': [('is_benefits_program', '=', False)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Service Configuration Panel for Benefits Program -->
    <record model="ir.actions.act_window"
            id="action_service_panel_benefits_program">
        <field name="name">Service Configuration Panel</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">service.configuration.panel</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'benefits_program_model': 1}</field>
        <field name="domain">[('model_id.model','=','org.benefits.program')]
        </field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new service.
            </p>
            <p>
                Press create button to create a new service.
            </p>
        </field>
    </record>

    <!-- Org Benefits Program Stages -->
    <record model="ir.actions.act_window"
            id="action_displayed_stages_benefits_program">
        <field name="name">Stages</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">service.panel.displayed.states</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'benefits_program_model': 1}</field>
        <field name="domain">[('model_id.model','=','org.benefits.program')]
        </field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new stage.
            </p>
            <p>
                Press create button to create a new stage.
            </p>
        </field>
    </record>

    <!-- bp.sub.benefits form view -->
    <record id="bp_sub_benefits_form_views" model="ir.ui.view">
        <field name="name">bp.sub.benefits.form.views</field>
        <field name="model">bp.sub.benefits</field>
        <field name="arch" type="xml">
            <form string="Sub Benefits">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="code" required="1"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- sub benefits tree view -->
    <record id="bp_sub_benefits_tree_views" model="ir.ui.view">
        <field name="name">bp.sub.benefits.tree.views</field>
        <field name="model">bp.sub.benefits</field>
        <field name="arch" type="xml">
            <tree string="Sub Benefits">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- sub benefits action view -->
    <record id="bp_sub_benefits_action_views"
            model="ir.actions.act_window">
        <field name="name">Sub Benefits</field>
        <field name="res_model">bp.sub.benefits</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'readonly_by_pass': True}</field>
    </record>

    <!-- bp calculation config form view -->
    <record id="bp_calculation_config_form_views" model="ir.ui.view">
        <field name="name">bp.calculation.config.form.views</field>
        <field name="model">bp.calculation.config</field>
        <field name="arch" type="xml">
            <form string="Sub Benefits">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="computation_rule" required="1"/>
                            <field name="service_configuration_panel_id"
                                   invisible="1"/>
                        </group>
                    </group>
                    <group string="Grade Level">
                        <field name="grade_level_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Remarks">
                        <field name="remarks" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Benefits Program Proof form view -->
    <record id="bp_proof_form_view" model="ir.ui.view">
        <field name="name">Benefits Program Proof</field>
        <field name="model">service.proof.documents</field>
        <field name="arch" type="xml">
            <form string="Loan Proof">
                <sheet>
                    <group>
                        <field name="model_id" readonly="1"/>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="mandatory"/>
                        <field name="active" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="bp_proof_tree_view" model="ir.ui.view">
        <field name="name">Benefits Program Proof Tree</field>
        <field name="model">service.proof.documents</field>
        <field name="arch" type="xml">
            <tree string="Benefits Program Proof">
                <field name="model_id"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window"
            id="action_bp_proof_view">
        <field name="name">Benefits Program Proofs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">service.proof.documents</field>
        <field name="view_type">form</field>
        <field name="context">{'is_benefits_program':True}</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('model_id.model','=', 'org.benefits.program')]
        </field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new proof.
            </p>
            <p>
                Press create button to create a new stage.
            </p>
        </field>
    </record>

</odoo>