<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Benefits Program Request for manager approval -->
    <record id="bp_request_send_to_manager" model="mail.template">
        <field name="name">Benefits Program Request Manager Approval</field>
        <field name="model_id"
               ref="org_benefits_program.model_org_benefits_program"/>
        <field name="email_from">${user.email |safe}</field>
        <field name="email_to">${object.employee_id.bp_manager_id.work_email |safe}</field>
        <field name="email_cc"></field>
        <field name="subject">Benefits Program Request To Be Approved</field>
        <field name="body_html"><![CDATA[
<p>
Dear ${(object.employee_id.bp_manager_id.user_id.name or '') |safe},
<br/>
<br/>
<p style="padding-left: 4em;">
Kindly, Approve the pending Benefits Program request.
<br/>
<b>Benefits Program #: </b>${object.name}
<br/>
<b>Employee Name: </b>${object.employee_id.name}
</p>
<br/>
<br/>
% if ctx["display_link"]:
   To proceed, Kindly <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
% endif
<br/>
<p> Kind Regards </p>
<br/>
<p style="font-size:13px; color:blue; border: 1px solid red; width:350px;"> Auto generated message through the ERP System. </p>
			   ]]>
        </field>
    </record>

