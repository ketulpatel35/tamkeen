<odoo>
    <!-- Position -->
    <record id="hr_contract_view_form_inherit_for_personnel_action"
            model="ir.ui.view">
        <field name="name">hr.contract.view.form.inherit.for.personnel.action</field>
        <field name="model">hr.contract</field>
        <field name="type">form</field>
        <field name="inherit_id"
               ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/div[@class='oe_title']"
                   position="before">
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" icon="fa-file-o"
                            name="button_personnel_action" type="object"
                            string="Personnel Action/s">
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>