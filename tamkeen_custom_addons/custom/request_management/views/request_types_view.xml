<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_request_types_tree" model="ir.ui.view">
            <field name="name">request.types.tree</field>
            <field name="model">request.types</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Request Types">
                    <field name="name" />
                    <field name="employee_id"/>
                    <field name="double_validation"/>
                </tree>
            </field>
        </record>
        <record id="view_request_types_form" model="ir.ui.view">
            <field name="name">request.types.form</field>
            <field name="model">request.types</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Request Types">
                    <sheet>
                        <group colspan="4">
                            <field name="name"/>
                            <field name="employee_id"/>
                         <!--    <field name="double_validation"/> -->
                            <field name="dep_validation" />
                            <field name="hr_validation" />
                            <field name="active"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_request_types_search" model="ir.ui.view">
            <field name="name">request.types.search</field>
            <field name="model">request.types</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="model">
                    <field name="name" />
                    <newline />
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_request_types_view">
            <field name="name">model</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">request.types</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_request_types_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_request_types_view_form">
            <field name="act_window_id" ref="act_open_request_types_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_request_types_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_request_types_view_tree">
            <field name="act_window_id" ref="act_open_request_types_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_request_types_tree" />
        </record>
    </data>
</odoo>