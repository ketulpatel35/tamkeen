<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- notify all employees of module installation -->
        <record model="mail.message" id="module_install_notification">
            <field name="model">mail.channel</field>
            <field name="res_id" ref="mail.channel_all_employees"/>
            <field name="message_type">notification</field>
            <field name="subtype_id" ref="mail.mt_comment"/>
            <field name="subject">Request Management application installed!</field>
            <field name="body"><![CDATA[<p>Manage your employees' requests, after due validation by their manager and HR manager.</p>]]></field>
        </record>

        <!-- Request-related subtypes for messaging / Chatter -->
        <record id="mt_request_approved2" model="mail.message.subtype">
            <field name="name">Approved</field>
            <field name="res_model">request.general</field>
            <field name="description">Request approved</field>
        </record>
        <record id="mt_request_approved" model="mail.message.subtype">
            <field name="name">Manager Approved</field>
            <field name="res_model">request.general</field>
            <field name="description">Request approved, waiting HR approval</field>
        </record>
        <record id="mt_request_refused" model="mail.message.subtype">
            <field name="name">Refused</field>
            <field name="res_model">request.general</field>
            <field name="description">Request refused</field>
        </record>
        <record id="mt_request_confirmed" model="mail.message.subtype">
            <field name="name">To Approve</field>
            <field name="res_model">request.general</field>
            <field name="description">Request confirmed, waiting manager confirmation</field>
        </record>

    </data>
</odoo>
