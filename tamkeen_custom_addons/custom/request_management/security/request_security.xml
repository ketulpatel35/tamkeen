<?xml version="1.0" ?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_oi_request_category">
            <field name="name">General Services Request</field>
            <field name="sequence">17</field>
        </record>
        <record id="group_request_user" model="res.groups">
            <field name="name">Normal User</field>
            <field name="category_id" ref="module_oi_request_category"/>
        </record>
        <record id="group_request_manager" model="res.groups">
            <field name="name">Service Line Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_request_user'))]"/>
            <field name="category_id" ref="module_oi_request_category"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <record id="group_request_general_manager" model="res.groups">
            <field name="name">Service Provider Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_request_user'))]"/>
            <field name="category_id" ref="module_oi_request_category"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>


        <record id="property_rule_request_general_manager" model="ir.rule">
            <field name="name">Service Provider Requests</field>
            <field name="model_id" ref="model_request_general"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('group_request_general_manager'))]"/>
        </record>
        <record id="property_rule_request_manager" model="ir.rule">
            <field name="name">Service Line Manager Requests</field>
            <field name="model_id" ref="model_request_general"/>
            <field name="domain_force">['|', ('employee_id', 'child_of', [user.employee_ids and user.employee_ids[0].id]), ('employee_id.department_id.manager_id.user_id.id', '=', user.id)]</field>
            <field name="groups" eval="[(4,ref('group_request_manager'))]"/>
        </record>
        <record id="property_rule_request_employee" model="ir.rule">
            <field name="name">User Requests</field>
            <field name="model_id" ref="model_request_general"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('base.group_user')), (4,ref('group_request_user')),]"/>
        </record>

    </data>
</odoo>
