<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Confirm Employee Salary Certification -->
        <record id="emp_salary_certificates_confirm" model="mail.template">
            <field name="name">Employment Certificate</field>
            <field name="model_id"
                   ref="hr_salary_certificates.model_emp_salary_certificates"/>
            <field name="email_from">${user.email | safe}</field>
            <field name="email_to">${object.employee_id.work_email | safe}</field>
            <field name="email_cc"></field>
            <field name="subject">Employment Certificate</field>
            <field name="body_html"><![CDATA[
<p>
Dear ${(object.employee_id.name or '')|safe},
<br/>
<br/>
<p style="padding-left: 4em;">
Your certificate request is ready for printing.
</p>
<br/>
% if ctx["display_link"]:
   To proceed, Kindly <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
% endif
<br/>
<p> Kind Regards </p>
<br/>
</p>
<p style="font-size:13px; color:blue; border: 1px solid red; width:350px;"> Auto generated message through the ERP System. </p>]]>
            </field>
        </record>

        <!-- Employee Salary Certification for Hr Approval -->
        <record id="emp_salary_certificates_hr_approval" model="mail.template">
            <field name="name">Employment Certificate for HR Approval</field>
            <field name="model_id"
                   ref="hr_salary_certificates.model_emp_salary_certificates"/>
            <field name="email_from">${user.email | safe}</field>
            <field name="email_to">${object.employee_id.company_id.hr_group_email | safe}</field>
            <field name="email_cc"></field>
            <field name="subject">Employment Certificate for HR Approval</field>
            <field name="body_html"><![CDATA[
<p>
Dear HR,
<br/>
<br/>
<p style="padding-left: 4em;">
Kindly, Approve the certificate request.
</p>
<br/>
% if ctx["display_link"]:
   To proceed, Kindly <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
% endif
<br/>
<p> Kind Regards </p>
<br/>
</p>
<p style="font-size:13px; color:blue; border: 1px solid red; width:350px;"> Auto generated message through the ERP System. </p>]]>
            </field>
        </record>


        <!-- Employee Salary Certification Rejected -->
        <record id="emp_salary_certificates_rejected" model="mail.template">
            <field name="name">Employment Certificate Rejected</field>
            <field name="model_id"
                   ref="hr_salary_certificates.model_emp_salary_certificates"/>
            <field name="email_from">${user.email | safe}</field>
            <field name="email_to">${object.employee_id.work_email | safe}</field>
            <field name="email_cc"></field>
            <field name="subject">Employment Certificate Rejected</field>
            <field name="body_html"><![CDATA[
<p>
Dear ${object.employee_id.name},
<br/>
<p style="padding-left: 4em;">
Your certificate request has been rejected.
</p>
<br/>
% if ctx["reason"]:
Refuse Reason: <br/>
" ${ctx["reason"]} "
% endif
<br/>
% if ctx["display_link"]:
   To review, Kindly <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
% endif
<br/>
<p> Kind Regards </p>
<br/>
</p>
<p style="font-size:13px; color:blue; border: 1px solid red; width:350px;"> Auto generated message through the ERP System. </p>
			   ]]>
            </field>
        </record>

        <!-- Employee Salary Certification Return -->
        <record id="emp_salary_certificates_return" model="mail.template">
            <field name="name">Employment Certificate Return</field>
            <field name="model_id"
                   ref="hr_salary_certificates.model_emp_salary_certificates"/>
            <field name="email_from">${user.email | safe}</field>
            <field name="email_to">${object.employee_id.work_email | safe}</field>
            <field name="email_cc"></field>
            <field name="subject">Certificate Request Returned</field>
            <field name="body_html"><![CDATA[
<p>
Dear ${object.employee_id.name},
<br/>
<p style="padding-left: 4em;">
Your certificate request has been returned back to the draft state, Kindly update the request with the necessary information.
</p>
<br/>
% if ctx["display_link"]:
   To review, Kindly <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
% endif
<br/>
<p> Kind Regards </p>
<br/>
</p>
<p style="font-size:13px; color:blue; border: 1px solid red; width:350px;"> Auto generated message through the ERP System. </p>
			   ]]>
            </field>
        </record>

          <!-- Employee Salary Certification Ready to print -->
        <record id="emp_salary_certificates_ready_to_print"
                model="mail.template">
            <field name="name">Employment Certificate ready to
                print</field>
            <field name="model_id"
                   ref="hr_salary_certificates.model_emp_salary_certificates"/>
            <field name="email_from">${user.email | safe}</field>
            <field name="email_to">${object.employee_id.work_email | safe}</field>
            <field name="email_cc"></field>
            <field name="subject">Certificate Request Ready For Printing</field>
            <field name="body_html"><![CDATA[
<p>
Dear ${object.employee_id.name},
<br/>
<p style="padding-left: 4em;">
Your certificate request has been approved and ready for printing.
</p>
<br/>
% if ctx["display_link"]:
   To proceed, Kindly <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
% endif
<br/>
<p> Kind Regards </p>
<br/>
</p>
<p style="font-size:13px; color:blue; border: 1px solid red; width:350px;"> Auto generated message through the ERP System. </p>
			   ]]>
            </field>
        </record>
    </data>
</odoo>