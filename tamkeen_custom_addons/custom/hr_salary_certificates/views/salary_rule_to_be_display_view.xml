<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- salary rule display ess -->
    <record id="salary_rule_form_view_display_ess" model="ir.ui.view">
        <field name="name">salary_rule_form_view_display_ess</field>
        <field name="model">hr.salary.rule</field>
        <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='appears_on_payslip']"
                       position="after">
                    <field name="display_in_ess"/>
                </xpath>
            </data>
        </field>
    </record>

</odoo>