<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="destination_organization_form_view" model="ir.ui.view">
        <field name="name">destination.organization.from.view</field>
        <field name="model">destination.organization</field>
        <field name="arch" type="xml">
            <form string="Destination Organization">
                <sheet>
                    <group colspan="4" col="4" name="employee_info">
                        <field name="name" required="1"/>
                        <field name="arabic_name"/>
                        <field name="dest_org_type"
                               domain="[('is_bank','!=',True)]"
                               required="1"/>
                        <field name="code"/>
                        <field name="sequence" required="1"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- destination organization tree view-->
    <record id="destination_organization_tree_view" model="ir.ui.view">
        <field name="name">destination.organization.tre.view</field>
        <field name="model">destination.organization</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="Destination Organization Tree">
                <field name="name"/>
                <field name="code"/>
                <field name="dest_org_type"/>
                <field name="sequence"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- destination organization action -->
    <record id="destination_organization_action" model="ir.actions.act_window">
        <field name="name">Destination Organization</field>
        <field name="res_model">destination.organization</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- destination.organization type from view -->
    <record id="destination_organization_type_form_view" model="ir.ui.view">
        <field name="name">destination.organization.type.from.view</field>
        <field name="model">destination.organization.type</field>
        <field name="arch" type="xml">
            <form string="Destination Organization Type">
                <sheet>
                    <group colspan="4" col="4" name="employee_info">
                        <field name="name" required="1"/>
                        <field name="arabic_name"/>
                        <field name="code"/>
                        <field name="sequence" required="1"/>
                        <field name="active"/>
                        <field name="purpose_required"/>
                        <field name="is_bank"/>
                    </group>
                    <notebook>
                        <page string="Purpose">
                            <field name="purpose_ids"/>
                        </page>
                        <page string="Extra">
                            <group name="extra">
                                <field name="max_report_print"
                                       string="Maximum Printing Count Per Request"/>
                            </group>
                        </page>
                        <page string="Report Settings">
                            <group name="report_settings" col="4" colspan="4">
                                <field name="employee_id"/>
                                <field name="contact_email"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                  <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- destination organization type tree view-->
    <record id="destination_organization_type_tree_view" model="ir.ui.view">
        <field name="name">destination.organization.type.tre.view</field>
        <field name="model">destination.organization.type</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="Destination Organization Type">
                <field name="name"/>
                <field name="code"/>
                <field name="sequence"/>
            </tree>
        </field>
    </record>

    <!-- destination organization type action -->
    <record id="destination_organization_type_action"
            model="ir.actions.act_window">
        <field name="name">Destination Organization Type</field>
        <field name="res_model">destination.organization.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>