<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">

        <!-- Employee Salary Certificates Category-->
        <record model="ir.module.category" id="emp_salary_certificates_category">
            <field name="name">Employment Certificate</field>
            <field name="sequence">18</field>
        </record>
        <!-- normal user -->
         <record id="emp_salary_certificates_normal_user" model="res.groups">
            <field name="name">Normal User</field>
            <field name="category_id" ref="emp_salary_certificates_category"/>
        </record>
        <!-- Hr Approval -->
        <record id="emp_salary_certificates_category_hr_approval"
                model="res.groups">
            <field name="name">HR Approval</field>
            <field name="implied_ids" eval="[(4, ref('emp_salary_certificates_normal_user'))]"/>
            <field name="category_id" ref="emp_salary_certificates_category"/>
        </record>
        <!-- OnBehalf -->
        <record id="group_certificate_on_behalf_approval_srvs" model="res.groups">
            <field name="name">Can Request on Behalf of Others</field>
            <field name="implied_ids" eval="[(4, ref('emp_salary_certificates_normal_user'))]"/>
            <field name="category_id" ref="emp_salary_certificates_category"/>
        </record>

    </data>
</odoo>