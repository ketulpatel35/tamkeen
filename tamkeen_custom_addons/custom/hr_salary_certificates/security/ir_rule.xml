<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- emp.salary.certificates record view for normal user -->
        <record id="rule_emp_salary_certificates_normal_user" model="ir.rule">
            <field name="name">Normal User</field>
            <field name="model_id" ref="model_emp_salary_certificates"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4,ref('emp_salary_certificates_normal_user'))]"/>
            <field name="perm_write" eval="False"/>
        </record>

        <!-- emp.salary.certificates record view for Hr Approval User -->
        <record id="rule_emp_salary_certificates_hr_approval" model="ir.rule">
            <field name="name">HR Approval</field>
            <field name="model_id" ref="model_emp_salary_certificates"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups"
                   eval="[(4,ref('emp_salary_certificates_category_hr_approval'))]"/>
            <!-- <field name="perm_write" eval="False"/> -->
        </record>

    </data>
</odoo>