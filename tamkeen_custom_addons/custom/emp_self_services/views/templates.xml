        <!-- Experience request send for HR Approval -->
        <record id="hr_experience_req_send_to_hr" model="mail.template">
            <field name="name">Experience HR Approval</field>
            <field name="model_id"
                   ref="emp_self_services.model_tamkeen_hr_experiences" />
            <field name="email_from">${user.email | safe}</field>
            <field name="email_to">${object.emp_line.company_id
            .hr_group_email | safe}</field>
            <field name="subject">Experience Request To Be Approved</field>
            <field name="body_html"><![CDATA[
<p>
Dear HR Team,
<br/>
<p style="padding-left: 4em;">
Kindly, Approve the pending experience request.
<br/>
<b>Requester Name: </b>${object.emp_line.name}
<br/>
% if ctx["display_link"]:
   To proceed, Kindly <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
% endif
<br/>
<p> Kind Regards </p>
<br/>
<p style="font-size:13px; color:blue; border: 1px solid red; width:350px;"> Auto generated message through the ERP System. </p>
			   ]]>
            </field>

        </record>


