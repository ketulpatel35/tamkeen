<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <data>

        <record id="view_bank_ir8a_wizard_form" model="ir.ui.view">
            <field name="name">bank.ir8a.wizard.form</field>
            <field name="model">bank.ir8a.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Payroll Information">
                    <sheet>
                      <group string="Payment Period" colspan="4" col="4"> 
                          <field name="payment_purpose_code" colspan="2"
                                 required="1"/>
                          <field name="payment_narration" colspan="2"/>
                          <field name="report_destination" colspan="2"
                                 required="1"/>
                          <field name="value_date" colspan="2" required="1"/>
                          <newline />
                          <field name="payroll_period_id" colspan="2"
                                 required="1"/>
                          <newline />
                          <field name="date_start" colspan="2"/> 
                          <field name="date_end" colspan="2"/> 
                      </group>
                      <group>
                          <field name="company_id" invisible="1"/>
                          <field name="mol_establishment_id" invisible="1"/>
                          <field name="employer_id" invisible="1"/>
                          <field name="debit_account_number" invisible="1"/>
                          <field name="connect_id" invisible="1"/>
                      </group>
                    </sheet>
                    <footer>
                        <button  icon="fa-cogs" class="oe_highlight oe_right"
                                 name="action_generate_bank_ir8a"
                                 string="Generate Bank IR8A File"
                                 type="object"/>
                        <field name="data" filename="filename"/>
                        <button class="btn-default oe_right" special="cancel"
                                string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_generate_bank_ir8a_data"
                model="ir.actions.act_window">
            <field name="name">Generate Bank IR8A File Wizard</field>
            <field name="res_model">bank.ir8a.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
           <field name="view_id" ref="view_bank_ir8a_wizard_form"/>
           <field name="target">new</field>
           <field name="context">{'model':'bank.ir8a.wizard'}</field>
        </record>  

         <!-- Report Bank IR8A Generation -->
        <menuitem id="menu_generate_bank_ir8a_data"
                  name="Bank IR8A Report Generation"
                  action="action_generate_bank_ir8a_data"
                  parent="hr_payroll_period.main_payroll_reports_menu"
                  groups="hr_payroll.group_hr_payroll_user" sequence="1"/>
        

    </data>
</odoo>
