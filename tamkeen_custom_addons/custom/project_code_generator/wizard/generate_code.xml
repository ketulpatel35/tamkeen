<odoo>


    <record id="project_project_generate_code_wizard_view" model="ir.ui.view">
        <field name="name">project.project.generate.code.wizard.view</field>
        <field name="model">project.project.code</field>
        <field name="arch" type="xml">
            <form string="Generate Code">
                <group
                        string="This wizard will help you to generate a unique code for the project."/>
                <separator
                        style="font-size:19px !important;"
                        string="-Note, The code will be generated as per the below sequence."/>
                <group colspan="4" col="4">

                    <field name="current_code" readonly="1"
                           attrs="{'invisible': [('current_code','=',False)]}"/>
                    <field name="override_code"
                           attrs="{'invisible': [('current_code','=',False)]}"/>
                </group>
                <group colspan="4" col="4">

                    <field name="prefix"
                           attrs="{'readonly':[('current_code','!=',False),('override_code','=',False)]}"/>
                    <field name="project_type"
                           attrs="{'readonly':[('current_code','!=',False),('override_code','=',False)]}"/>
                    <field name="project_year" attrs="{'readonly':[('current_code','!=',False),('override_code','=',False)]}"/>
                    <field name="suffix" attrs="{'readonly':[('current_code','!=',False),('override_code','=',False)]}"/>
                </group>
                <footer>
                    <button string="Genarate"
                            name="generate_code" type="object"
                            default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!--Action For Generate Code-->
    <act_window id="action_project_generate_code_wizard"
                multi="False"
                key2="client_action_multi" name="Generate Code"
                res_model="project.project.code"
                src_model="project.project"
                view_mode="form" target="new" view_type="form"
                groups="project.group_project_manager,project_management.group_create_project"
                context="{'customer_id': partner_id,'default_current_code':project_code,
                'actual_start_date':actual_start_date}"/>
</odoo>