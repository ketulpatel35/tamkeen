<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Leave report print wizard -->
        <record id="leave_cleansing_xls_report_form" model="ir.ui.view">
            <field name="name">leave.cleansing.xls.report.form</field>
            <field name="model">leave.cleansing.xls.report</field>
            <field name="arch" type="xml">
                <form string="Leave Balance xls Report">
                    <group>
                        <!--<field name="to_date" required="1"/>-->
                        <field name="holiday_status_id"
                               string="Leave Type"/>
                    </group>
                    <group string="Select Employees">
                        <field name="employee_ids" nolabel="1"/>
                    </group>
                    <footer>
                        <button name="print_report" type="object"
                                string="Print Report"
                                class="oe_highlight"/>
                        <button string="Cancel" class="oe_link"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_leave_cleansing_xls_report"
                model="ir.actions.act_window">
            <field name="name">Leave Cleansing xls Report</field>
            <field name="res_model">leave.cleansing.xls.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <!-- Leave report print wizard -->
        <record id="cleansing_xls_report_form" model="ir.ui.view">
            <field name="name">cleansing.xls.report.form</field>
            <field name="model">cleansing.xls.report</field>
            <field name="arch" type="xml">
                <form string="Excel Output">
                    <separator colspan="4"
                               string="Please save file as .xls excel format"/>
                    <field name="name" invisible="1"/>
                    <field name="xls_output" filename='name' readonly='1'/>
                    <footer>
                        <button string="Cancel" class="oe_link"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_cleansing_xls_report"
                model="ir.actions.act_window">
            <field name="name">Leave Cleansing xls Report</field>
            <field name="res_model">cleansing.xls.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>