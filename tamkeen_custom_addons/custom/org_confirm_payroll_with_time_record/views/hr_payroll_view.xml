<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view"
            id="hr_payslip_run_form_inherit_for_confirm_payslip">
        <field name="name">hr.payslip.run.form.inherit.for.confirm.payslip</field>
        <field name="inherit_id"
               ref="hr_payroll.hr_payslip_run_form"/>
        <field name="model">hr.payslip.run</field>
        <field name="arch" type="xml">
            <button name="draft_payslip_run" position="before">
                <button name="compute_the_payslip" type="object"
                        string="Simulated Payroll" states="draft"
                        class="oe_highlight"
                        context="{'hr_payslip_run': True}"/>
                <button name="confirm_payslip_run" type="object"
                        string="Confirm" states="draft"
                        class="oe_highlight"
                        confirm="Are you sure you want to confirm this paylip batch?"/>
            </button>
            <button name="%(hr_payroll.action_hr_payslip_by_employees)d"
                    position="attributes">
                <attribute name="context">{'batch_id': id,
                    'run_active_model': 'hr.payslip.run'}</attribute>
            </button>
        </field>
    </record>
</odoo>