    <!--&lt;!&ndash; Remove stock Contracts menuitem and put it in the submenu &ndash;&gt;-->

    <!--<menuitem-->
            <!--id="hr_menu_contract_type"-->
            <!--action="action_hr_contract_type"-->
            <!--parent="hr.menu_human_resources_configuration"-->
            <!--sequence="3"-->
            <!--groups="base.group_no_one"/>-->

    <menuitem
            id="hr_contract.hr_menu_contract"
            name="Contracts"
            sequence="12"
            web_icon="hr_contract_init,static/description/contract.png"
            groups="hr_contract_init.group_view_all_contracts"/>

    <menuitem
            id="hr_contract_init_configuration"
            name="Configuration"
            sequence="100"
            parent="hr_contract.hr_menu_contract"
            groups="hr_contract_init.group_contracts_configuration"/>

    <menuitem
            id="hr_sub_menu_contract"
            name="Employees Contracts"
            action="hr_contract.action_hr_contract"
            parent="hr_contract.hr_menu_contract"
            sequence="3"
            groups="hr_contract_init.group_view_all_contracts"/>

    <menuitem id="hr_contracts_configuration"
                  parent="hr_contract_init.hr_contract_init_configuration" name="Contracts" sequence="10"
                  groups="hr_contract_init.group_contracts_configuration"/>

    <menuitem
            id="hr_contract.hr_menu_contract_type"
            action="hr_contract.action_hr_contract_type"
            parent="hr_contracts_configuration"
            sequence="3"
            groups="hr_contract_init.group_contracts_configuration"/>

    <menuitem action="open_contract_init"
              id="menu_hr_contract_init"
              parent="hr_contracts_configuration"
              sequence="10"
              groups="hr_contract_init.group_contracts_configuration"/>

    <!-- Initial Wages -->
    <record id="view_init_wage_tree" model="ir.ui.view">
        <field name="name">hr.contract.init.wage.tree</field>
        <field name="model">hr.contract.init.wage</field>
        <field name="arch" type="xml">
            <tree string="Initial Wages">
                <field name="category_ids" widget="many2many_tags"/>
                <field name="job_id"/>
                <field name="starting_wage"/>
                <field name="is_default"/>
            </tree>
        </field>
    </record>

    <record id="view_init_wage_form" model="ir.ui.view">
        <field name="name">hr.contract.init.wage.form</field>
        <field name="model">hr.contract.init.wage</field>
        <field name="arch" type="xml">
            <form string="Intial Wages">
                <group>
                    <group>
                        <field name="job_id"/>
                        <field name="starting_wage"/>
                        <field name="is_default"/>
                    </group>
                    <group>
                        <field name="category_ids" widget="many2many_tags"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- Contract -->
    <record id="hr_contract_view_inherit_for_date" model="ir.ui.view">
        <field name="name">hr.contract.view.form.contract_init</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='trial_date_start']" position="replace">
                <field name="trial_date_start" class="oe_inline" attrs="{'readonly': [('state','in',('close'))]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_employees_contracts_filter_inherit" model="ir.ui.view">
        <field name="name">Contracts</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_search" />
        <field name="arch" type="xml">
            <field name="employee_id" position="after">
                <filter string="Ongoing Contracts" name="ongoing_contracts" domain="[('state','!=','close')]"/>
                <filter string="Completed Contracts" name="completed_contracts" domain="[('state','=','close')]"/>
                <filter string="Trial Period" name="trial_period_contracts" domain="[('state','in',['trial','trial_ending'])]"/>
                <filter string="Waiting Action" name="waiting_action_contracts" domain="[('state','in',['draft','trial','open'])]"/>
                <separator/>
                <filter string="Active Employees Contracts" name="active_employees_contracts" domain="[('employee_id.active','=',True)]"/>
                <filter string="Terminated Employees Contracts" name="terminated_employees_contracts" domain="[('employee_id.active','=',False)]"/>
            </field>
        </field>
    </record>

    <record id="hr_contract.action_hr_contract" model="ir.actions.act_window">
        <field name="context">
                {'search_default_ongoing_contracts':1}
            </field>
    </record>

    <record id="remove_bank_account_id_for_group" model="ir.ui.view">
        <field name="name">hr.employee.remove.group</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id"
               ref="hr_contract.hr_hr_employee_view_form2" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//button[@name='%(hr_contract.act_hr_employee_2_hr_contract)d']" position="attributes">
                    <attribute name="groups">hr_contract_init.group_view_all_contracts</attribute>
                </xpath>
            </data>
        </field>
    </record>

</odoo>
