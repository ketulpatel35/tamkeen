<?xml version="1.0"?>
<odoo>
    <record id="property_rule_contract_employee" model="ir.rule">
        <field name="name">Employee Own Contract</field>
        <field name="model_id" ref="hr_contract.model_hr_contract"/>
        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>
    <record id="rule_employee_manager_contracts" model="ir.rule">
        <field name="name">Employee Manager Contracts</field>
        <field name="model_id" ref="hr_contract.model_hr_contract"/>
        <field name="domain_force">[('employee_id.parent_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('hr_employee_customization.group_employee_manager'))]"/>
    </record>
    <record id="view_all_contracts_rule" model="ir.rule">
        <field name="name">View All Contracts</field>
        <field name="model_id" ref="model_hr_contract"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('hr_contract_init.group_view_all_contracts'))]"/>
    </record>
</odoo>
