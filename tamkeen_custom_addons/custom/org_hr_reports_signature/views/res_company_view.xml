<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--res.company form view-->
        <record model="ir.ui.view"
                id="view_company_inherit_for_report_configuration">
            <field name="name">res.company.mol.form.inherit.for.payslip.report</field>
            <field name="inherit_id" ref="org_payroll_lock_day.view_company_inherit_for_register"/>
            <field name="model">res.company</field>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='payroll_config']" position="inside">
                        <group col="4" colspan="4">
                            <field name="payslip_certificate_stamp"/>
                            <field name="payslip_certificate_signature"/>
                            <field name="authorised_employee_id"/>
                            <field name="authorised_employee_email"/>
                        </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
