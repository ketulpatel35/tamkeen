<odoo>

    <!-- Action for ESS -->
    <record id="action_eos_requests_ess" model="ir.actions.act_window">
        <field name="name">End of Service Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">org.end.of.service</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('employee_id.user_id.id','=',uid)]</field>
        <field name="filter" eval="True"/>
        <field name="context">
            {'readonly_by_pass': True}
        </field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new End of Service Request.
            </p>
            <p>
                Press create button to apply for any End of Service request,
                The system will take care from the approval.
            </p>
        </field>
    </record>

    <!-- Action for MSS -->
    <record id="action_eos_requests_approval_mss"
            model="ir.actions.act_window">
        <field name="name">End of Service Request To Approve</field>
        <field name="res_model">org.end.of.service</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'readonly_by_pass': True}</field>
        <field name="domain">['|',('employee_id.eos_manager_id.user_id.id','=',uid),'|',('employee_id.eos_vp_id.user_id.id','=',uid),('employee_id.eos_ceo_id.user_id.id','=',uid)]</field>
        <field name="filter" eval="True"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                For approval only.
            </p>
            <p>
                For approval only.
            </p>
        </field>
    </record>

</odoo>