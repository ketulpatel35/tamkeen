<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category"
                id="base.module_category_project_management">
            <field name="name">Project Management</field>
            <field name="description">Helps you manage your projects and
                tasks by tracking them, generating plannings, etc...
            </field>
            <field name="sequence">20</field>
        </record>

        <record id="project.group_project_user" model="res.groups">
            <field name="name">Normal User</field>
        </record>

        <record id="group_view_all_project" model="res.groups">
            <field name="name">View All Projects</field>
            <field name="category_id"
                   ref="base.module_category_project_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('project.group_project_user'))]"/>
        </record>

        <record id="group_view_assigned_project" model="res.groups">
            <field name="name">View Assigned Projects</field>
            <field name="category_id"
                   ref="base.module_category_project_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('project.group_project_user'))]"/>
        </record>

        <record id="group_create_project" model="res.groups">
            <field name="name">Create Project</field>
            <field name="category_id"
                   ref="base.module_category_project_management"/>
        </record>

        <record id="group_update_project" model="res.groups">
            <field name="name">Update Project</field>
            <field name="category_id"
                   ref="base.module_category_project_management"/>
        </record>

        <record id="group_project_report" model="res.groups">
            <field name="name">Project Report</field>
            <field name="category_id"
                   ref="base.module_category_project_management"/>
        </record>

        <record id="group_project_dashboard" model="res.groups">
            <field name="name">Project Dashboard</field>
            <field name="category_id"
                   ref="base.module_category_project_management"/>
        </record>

        <record id="group_project_configuration" model="res.groups">
            <field name="name">Project Configuration</field>
            <field name="category_id"
                   ref="base.module_category_project_management"/>
        </record>

        <record id="group_project_not_update_information" model="res.groups">
            <field name="name">Not Update Protected Info</field>
            <field name="category_id"
                   ref="base.module_category_project_management"/>
        </record>

        <record id="project.group_project_manager" model="res.groups">
            <field name="name">Project Master</field>
            <field name="category_id"
                   ref="base.module_category_project_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('project.group_project_user'))]"/>
        </record>
    </data>
</odoo>