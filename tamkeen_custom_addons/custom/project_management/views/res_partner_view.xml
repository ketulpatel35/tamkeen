<odoo>
    <record id="view_partner_form_inherit_for_project" model="ir.ui.view">
        <field name="name">view.partner.form.inherit.for.project</field>
        <field name="model">res.partner</field>
        <field name="inherit_id"
               ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="action"
                        name="%(project_management.action_project_management)d" context="{'search_default_partner_id': active_id, 'default_partner_id': active_id}" icon="fa-tasks">
                    <field string="Projects" name="project_count"
                           widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>