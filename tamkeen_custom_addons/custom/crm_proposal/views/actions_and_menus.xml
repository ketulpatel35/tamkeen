<odoo>
    <data>
        <record id="action_proposal_form" model="ir.actions.act_window">
            <field name="name">Proposals</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.proposal</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_last_revision":1}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add CRM Proposal.
              </p>
            </field>
        </record>
        
        <record id="action_proposal_rfp_form" model="ir.actions.act_window">
            <field name="name">Proposals</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.proposal</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_last_revision":1}</field>
            <field name="domain">[('type', 'in', ['rfp', 'rfi'])]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add CRM Proposal.
              </p>
            </field>
        </record>

        <record id="action_proposal_rfq_form" model="ir.actions.act_window">
            <field name="name">Quotation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.proposal</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_last_revision":1}</field>
            <field name="domain">[('type', 'in', ['rfq', 'rfi'])]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add CRM Proposal.
              </p>
            </field>
        </record>

        <menuitem name="Proposals" id="menu_proposal_form" parent="sales_team.menu_sales" action="action_proposal_form" sequence="5"/>

        <menuitem name="RFx Response" id="menu_proposal_main" parent="sales_team.menu_base_partner" sequence="7"/>

        <menuitem name="Proposals" id="menu_rfp_proposal_form" parent="menu_proposal_main" action="action_proposal_rfp_form" sequence="1"/>
        <menuitem name="Quotations" id="menu_rfq_proposal_form" parent="menu_proposal_main" action="action_proposal_rfq_form" sequence="2"/>
    </data>
</odoo>
