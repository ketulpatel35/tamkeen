<odoo>
    <data>
        <record id="crm_technology_form" model="ir.ui.view">
            <field name="name">crm.technology.view</field>
            <field name="model">crm.technology</field>
            <field name="arch" type="xml">
                <form string="Technology Stack">
                    <group>
                        <group>
                            <field name="code" required="True"></field>
                            <field name="name"></field>
                        </group>
                        <group>
                            <field name="short_name"></field>
                            <field name="active"></field>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="crm_technology_tree" model="ir.ui.view">
            <field name="name">crm.technology.view</field>
            <field name="model">crm.technology</field>
            <field name="arch" type="xml">
                <tree string="Technology Stacks">
                    <field name="code" required="True"></field>
                    <field name="name"></field>
                    <field name="short_name"></field>
                    <field name="active"></field>
                </tree>
            </field>
        </record>

    </data>
</odoo>
