<odoo>

    <record model="ir.ui.view"
            id="hr_payslip_run_form_inherit_for_confirm_payslip">
        <field name="name">hr.payslip.run.form.inherit.for.confirm.payslip</field>
        <field name="inherit_id"
               ref="hr_payroll.hr_payslip_run_form"/>
        <field name="model">hr.payslip.run</field>
        <field name="arch" type="xml">
            <button name="draft_payslip_run" position="before">
                <button name="compute_the_payslip" type="object"
                        string="Simulated Payroll" states="draft"
                        class="oe_highlight"
                        context="{'hr_payslip_run': True}"
                        groups="hr_payroll.group_hr_payroll_user"/>
                <button name="confirm_payslip_run" type="object"
                        string="Confirm" states="draft"
                        class="oe_highlight"
                        confirm="Are you sure you want to confirm this paylip batch?"
                        groups="hr_payroll.group_hr_payroll_user"/>
            </button>
            <button name="%(hr_payroll.action_hr_payslip_by_employees)d"
                    position="attributes">
                <attribute name="context">{'batch_id': id,
                    'run_active_model': 'hr.payslip.run'}</attribute>
                <attribute name="groups">hr_payroll.group_hr_payroll_user</attribute>
            </button>
        </field>
    </record>

    <record model="ir.ui.view"
            id="hr_payslip_run_form_inherit_for_recording">
        <field name="name">hr.payslip.run.form.inherit.for.recording</field>
        <field name="inherit_id"
               ref="hr_payroll.hr_payslip_run_form"/>
        <field name="model">hr.payslip.run</field>
        <field name="arch" type="xml">
            <xpath expr="//sheet/label" position="before">
                <div class="oe_button_box" name="button_box">
                    <button type="object"
                            name="generate_pyaslip_amendment"
                            string="Payslip Amendment"
                            groups="hr_payroll.group_hr_payroll_user"/>
                    </div>
            </xpath>
            <xpath expr="//sheet/group/label"
                   position="before">
                <field name="payroll_period_id" required="1"/>
            </xpath>
        </field>
    </record>

    <record id="hr_payroll.action_hr_payslip_run_tree"
            model="ir.actions.act_window">
        <field name="context">{'readonly_by_pass': True}</field>
    </record>

</odoo>