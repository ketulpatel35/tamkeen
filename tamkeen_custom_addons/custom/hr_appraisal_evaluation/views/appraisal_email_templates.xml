<?xml version="1.0" encoding='UTF-8'?>
<openerp>
    <data>
        <!--Email template -->
        <record id="appraisal_emp_email_template" model="mail.template">
            <field name="name">Employee Appraisal Review Form</field>
            <!--<field name="email_from">${(object.emp_id.work_email and '%s &lt;%s&gt;' % (object.emp_id.name, object.emp_id.work_email) or '')|safe}</field>-->
            <field name="email_from">${object.emp_id.work_email | safe}</field>
            <field name="subject">Manager Review For Employee Appraisal ${object.appraisal_sequence or 'n/a'}</field>
            <field name="email_to">${object.immediate_manager.work_email | safe}</field>
            <!--<field name="email_cc">${object.to_upper_manager.work_email}</field>-->
            <field name="model_id" ref="hr_appraisal_evaluation.model_employee_appraisal"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
<p>Dear ${object.immediate_manager}</p>

<p> Please Review the Appraisal for ${object.emp_id.name} whose Appraisla Form
Number is ${object.appraisal_sequence or 'n/a'}</p>

<p> Please Click on the below link to open Employee appraisal form for the Email snt by the User</p>

<p> Thank You.</p>
]]></field>
        </record>

        <!-- Apprisal Employee Notification template -->
        <record id="notification_to_vp_email_template" model="mail.template">
            <field name="name">Employee Appraisal Notification</field>
            <field name="email_from">${object.emp_id.work_email | safe}</field>
            <field name="subject">${object.emp_id.name or 'n/a'} Appraisal Notification</field>
            <field name="email_to">${object.to_upper_manager.work_email | safe}</field>
            <!--<field name="email_cc">${object.to_upper_manager.work_email}</field>-->
            <field name="model_id" ref="hr_appraisal_evaluation.model_employee_appraisal"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
<p>Dear ${object.to_upper_manager.name}</p>

<p>Notification Mail</p>

<p>Notification Mail</p>

<p> Thank You.</p>]]>
            </field>
        </record>

        <!-- Apprisal manager Notification template -->
        <record id="notification_to_manager_email_template" model="mail.template">
            <field name="name">Employee Objective Approval Notification</field>
            <field name="email_from">${object.employee_id.work_email | safe}</field>
            <field name="subject">${object.employee_id.name or 'n/a'} Appraisal Notification</field>
            <field name="email_to">${object.immediate_manager_id.work_email | safe}</field>
            <!--<field name="email_cc">${object.to_upper_manager.work_email}</field>-->
            <field name="model_id" ref="hr_appraisal_evaluation.model_employee_objective"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
<p>Dear ${object.immediate_manager_id.name}</p>

<p>Notification for employee objective approval of employee  ${object.employee_id.name}</p>

<p>Kindly please approve </p>

<p> Thank You.</p>]]>
            </field>
        </record>

    </data>
</openerp>