<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- end of service for manager approval -->
    <record id="eos_request_send_to_manager" model="mail.template">
        <field name="name">End of Service Manager Approval</field>
        <field name="model_id"
               ref="org_end_of_service.model_org_end_of_service"/>
        <field name="email_from">${user.email | safe}</field>
        <field name="email_to">${object.employee_id.eos_manager_id.work_email | safe}</field>
        <field name="email_cc"></field>
        <field name="subject">End of Service Request To Be Approved</field>
        <field name="body_html"><![CDATA[
<p>
Dear ${(object.employee_id.eos_manager_id.user_id.name or '')|safe},
<br/>
<br/>
<p style="padding-left: 4em;">
Kindly, Approve the pending End of Service request.
<br/>
<b>End of Service #: </b>${object.name}
<br/>
<b>Employee Name: </b>${object.employee_id.name}
</p>
<br/>
<br/>
% if ctx["display_link"]:
   To proceed, Kindly <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
% endif
<br/>
<p> Kind Regards </p>
<br/>
<p style="font-size:13px; color:blue; border: 1px solid red; width:350px;"> Auto generated message through the ERP System. </p>
			   ]]>
        </field>
    </record>

