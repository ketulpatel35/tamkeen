<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="0">

        <record id="group_hr_normal_user" model="res.groups">
            <field name="name">Normal User</field>
            <field name="category_id" ref="base.module_category_hr_attendance"/>
        </record>

        <record id="group_hr_attendance_view_all" model="res.groups">
            <field name="name">View All Attendance Data</field>
            <field name="category_id" ref="base.module_category_hr_attendance"/>
        </record>

        <record id="group_hr_attendance_update_all" model="res.groups">
            <field name="name">Update Attendance Data</field>
            <field name="category_id" ref="base.module_category_hr_attendance"/>
        </record>

        <!-- Manager is Approval -->
        <record model="res.groups" id="hr_attendance.group_hr_attendance_manager">
            <field name="implied_ids" eval="[(6, 0, [ref('group_hr_normal_user')])]"/>
            <field name="name">Manager Approval</field>
        </record>

        <!-- Office is HR Approval-->
        <record id="hr_attendance.group_hr_attendance_user" model="res.groups">
            <field name="implied_ids" eval="[(6, 0, [ref('group_hr_normal_user')])]"/>
            <field name="name">HR Approval</field>
        </record>

        <!-- Attendance Configuration -->
        <record id="group_hr_attendance_configuration" model="res.groups">
            <field name="name">HR Attendance Configuration</field>
            <field name="category_id" ref="base.module_category_hr_attendance"/>
        </record>

        <!-- Office is VP Approval-->
        <record id="group_vp_attendance_user" model="res.groups">
            <field name="implied_ids" eval="[(6, 0, [ref('hr_attendance.group_hr_attendance_manager')])]"/>
            <field name="name">VP Approval</field>
            <field name="category_id" ref="base.module_category_hr_attendance"/>
        </record>

        <!-- Office is CEO Approval-->
        <record id="group_ceo_attendance_user" model="res.groups">
            <field name="implied_ids" eval="[(6, 0, [ref('hr_attendance.group_hr_attendance_manager')])]"/>
            <field name="name">CEO Approval</field>
            <field name="category_id" ref="base.module_category_hr_attendance"/>
        </record>

        <!-- Can Approve/Refuse His/Her Requests -->
        <record id="group_attendance_self_approval_srvs" model="res.groups">
            <field name="name">Can Approve/Cancel His/Her Requests</field>
            <field name="implied_ids" eval="[(4, ref('hr_attendance.group_hr_attendance_manager'))]"/>
            <field name="category_id" ref="base.module_category_hr_attendance"/>
        </record>

    </data>
</odoo>
