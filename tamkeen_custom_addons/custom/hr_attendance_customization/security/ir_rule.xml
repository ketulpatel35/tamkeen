<?xml version="1.0"?>
<odoo>
  <data>

      <record id="view_alll_employee_attendance" model="ir.rule">
          <field name="name">View All Employee Attendance</field>
          <field name="model_id"
                 ref="hr_attendance.model_hr_attendance"/>
          <field name="domain_force">[(1, '=', 1)]</field>
          <field name="groups" eval="[(4,ref('group_hr_attendance_view_all'))]"/>
      </record>

      <record id="manager_employee_attendance" model="ir.rule">
          <field name="name">Manager see his Employee Attendance</field>
          <field name="model_id"
                 ref="hr_attendance.model_hr_attendance"/>
          <field name="domain_force">[('employee_id.attendance_manager_id.user_id.id','=',user.id)]</field>
          <field name="groups" eval="[(4,ref('hr_attendance.group_hr_attendance_manager'))]"/>
      </record>

      <record id="attendance_data_rule_employee" model="ir.rule">
          <field name="name">Employee Attendance</field>
          <field name="model_id"
                 ref="hr_attendance.model_hr_attendance"/>
          <field name="domain_force">[('employee_id.user_id.id','=',user.id)]</field>
          <field name="groups" eval="[(4,ref('base.group_user'))]"/>
      </record>

      <record id="attendance_data_rule_normal_user" model="ir.rule">
          <field name="name">Normal User Attendance</field>
          <field name="model_id"
                 ref="hr_attendance.model_hr_attendance"/>
          <field name="domain_force">[('employee_id.user_id.id','=',user.id)]</field>
          <field name="groups" eval="[(4,ref('hr_attendance_customization.group_hr_normal_user'))]"/>
      </record>

      <record id="attendance_data_rule_vp_user" model="ir.rule">
          <field name="name">VP Attendance Rule</field>
          <field name="model_id"
                 ref="hr_attendance.model_hr_attendance"/>
          <field name="domain_force">[('employee_id.attendance_vp_id.user_id.id','=',user.id)]</field>
          <field name="groups" eval="[(4,ref('hr_attendance_customization.group_vp_attendance_user'))]"/>
      </record>

      <record id="attendance_data_rule_ceo_user" model="ir.rule">
          <field name="name">CEO Attendance Rule</field>
          <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
          <field name="domain_force">[('employee_id.attendance_ceo_id.user_id.id','=',user.id)]</field>
          <field name="groups" eval="[(4,ref('hr_attendance_customization.group_ceo_attendance_user'))]"/>
      </record>

      <record id="manual_attendance_data" model="ir.rule">
          <field name="name">Manual Attendance</field>
          <field name="model_id"
                 ref="hr_attendance.model_hr_attendance"/>
          <field name="domain_force">[('employee_id.user_id.id','=',user.id)]</field>
          <field name="groups" eval="[(4,ref('hr.group_hr_attendance'))]"/>
      </record>

  </data>
</odoo>
