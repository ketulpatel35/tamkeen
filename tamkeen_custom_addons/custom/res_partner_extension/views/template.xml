<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="vendor_profile_created" model="ir.filters">
            <field name="name">Vendor Profile Created</field>
            <field name="model_id">res.partner</field>
            <field name="domain">[('supplier','=',True)]</field>
            <field name="user_id" eval="False" />
        </record>

        <!-- Vendor Profile created -->
        <record id="vendor_creation_email_notification" model="mail.template">
            <field name="name">Vendor Creation Email Template</field>
            <field name="model_id"
                   ref="base.model_res_partner" />
            <field name="email_from">${user.email | safe}</field>
            <field name="email_cc"></field>
            <field name="subject">Vendor Creation</field>
            <field name="body_html"><![CDATA[
<p>
Dear All,<br/>

Kindly, FYI,<br/>
A new vendor has been created in the system and the details as below:<br/>
Name: ${(object.name or '')|safe}<br/>
Address: ${(object.city or '')|safe},<br/>
Commercial Registration#: ${(object.commercial_registration or '')|safe}<br/>
Commercial Registration Expiry Date:  ${(object.commercial_registration_expiry_date or '')|safe}<br/>
VAT Registration#: ${(object.vat or '')|safe}<br/>
Account Payable(Default): ${(object.property_account_payable_id.name or '')|safe}<br/>
% if ctx["display_link"]:
   For more details, Kindly <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=${ctx["model"]}&action=${ctx["action_id"]}">Click Here</a>
% endif
<br/>
<p> Kind Regards, </p>
<br/>
<p style="font-size:13px; color:blue; border: 1px solid red; width:350px;"> Auto generated message through the ERP System. </p>
			   ]]>
            </field>
        </record>
        <record id="action_email_vendor_profile_created_notification"
                model="ir.actions.server">
            <field name="name">Vendor Profile Created</field>
            <field name="model_id" ref="base.model_res_partner" />
            <field name="condition">True</field>
            <field name="type">ir.actions.server</field>
            <field name="state">email</field>
            <field name="template_id" ref="vendor_creation_email_notification" />
        </record>

        <record id="automated_action_email_vendor_profile_created"
                model="base.action.rule">
            <field name="name">Vendor Profile Created</field>
            <field name="model_id" ref="base.model_res_partner" />
            <field name="kind">on_create</field>
            <field name="filter_id" ref="vendor_profile_created" />
            <field name="server_action_ids"
                   eval="[(6,0,[ref('action_email_vendor_profile_created_notification')])]" />
        </record>

    </data>
</odoo>