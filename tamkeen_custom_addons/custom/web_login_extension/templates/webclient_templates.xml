<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="login" inherit_id="web.login" name="Login Inherit">
        <xpath expr="//label[@for='login']" position="replace" />
        <xpath expr="//label[@for='password']" position="replace" />

        <xpath expr="//input[@name='login']" position="attributes">
            <!-- Modified -->
            <attribute name="placeholder">Username</attribute>
            <!-- <attribute name="autocomplete">off</attribute> -->
            <!-- End -->
            <attribute name="autocorrect">off</attribute>
        </xpath>

        <xpath expr="//input[@name='password']" position="attributes">
            <attribute name="placeholder">Password</attribute>
        </xpath>

        <!-- Added -->
        <xpath expr="//div[@class='clearfix oe_login_buttons']" position="attributes">
            <attribute name="style">text-align:center;</attribute>
        </xpath>
        <xpath expr="//div[@class='clearfix oe_login_buttons']" position="after">
            <h6 style="text-align:center;">CopyrightÂ©2017 Innovation Department</h6>
        </xpath>

    </template>

    <template id="login_layout_no_db" inherit_id="web.login_layout" name="Login Layout">
        <xpath expr="//div[@class='col-md-6 col-md-offset-3 o_database_list']" position="replace">
            <div class="col-md-6 col-md-offset-3 o_database_list">
                <div class="text-center">
                    <img t-attf-src="/web/binary/company_logo{{ '?dbname='+db if db else '' }}"/>
                </div>
                <t t-raw="0"/>
                <t t-set="disable_database_manager" t-value="1"/>
                <div class="text-center" t-if="not disable_footer">
                    <t t-if="not disable_database_manager">
                        <a class="" href="/web/database/manager">Manage Databases</a> |
                    </t>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
